<resources>

    <style name="XHDialog" parent="@android:style/Theme.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogOutContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dialog_bg</item>
        <item name="android:paddingLeft">@dimen/dp_53</item>
        <item name="android:paddingRight">@dimen/dp_53</item>
    </style>

    <style name="DialogEmpty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_20</item>
    </style>

    <style name="DialogInnerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_inner_round13</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_24</item>
        <item name="android:layout_marginRight">@dimen/dp_24</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TitleStyle" parent="@style/BaseTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16.5</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MessageStyle" parent="@style/BaseTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
    </style>

    <style name="TitleMessageStyle" parent="@style/BaseTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16.5</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
    </style>

    <style name="ButtonBaseContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="HButtonContainer" parent="@style/ButtonBaseContainer">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VButtonContainer" parent="@style/ButtonBaseContainer">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16.5</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LineBase">
        <item name="android:background">@color/line</item>
    </style>

    <style name="LineHorizontal" parent="@style/LineBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="LineVertical" parent="@style/LineBase">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
