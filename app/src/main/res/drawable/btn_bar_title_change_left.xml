<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时的图片背景 -->
    <item android:state_focused="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/quan_green_bg_bartitle_select" />

            <corners android:radius="@dimen/dp_20" />
        </shape></item>

    <!-- 选中时的图片背景 -->
    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/quan_green_bg_bartitle_select" />

            <corners android:radius="@dimen/dp_20" />
        </shape></item>

    <!-- 选中时的图片背景 -->
    <item android:state_selected="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/quan_green_bg_bartitle_select" />

            <corners android:radius="@dimen/dp_20" />
        </shape></item>

    <!-- 选中时的图片背景 -->
    <item android:state_enabled="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/transparent" />

            <corners android:radius="@dimen/dp_20" />
        </shape></item>

    <!-- 默认时的背景图片 -->
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/transparent" />

            <corners android:radius="@dimen/dp_20" />
        </shape></item>

</selector>