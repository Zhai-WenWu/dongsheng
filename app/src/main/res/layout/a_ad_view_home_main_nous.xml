<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_fake_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_76"
    android:background="@color/backgroup_color"
    android:paddingTop="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:visibility="visible" >
    
    <ImageView
        android:id="@+id/view_ad_img"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_9"
        android:scaleType="centerCrop"
        android:src="@drawable/i_nopic" />

    <TextView
        android:id="@+id/view_ad_text"
        style="@style/singleText"
        android:layout_marginTop="@dimen/dp_4.5"
        android:layout_toRightOf="@+id/view_ad_img"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15" />
    
    <TextView
        android:id="@+id/view_ad_tag"
        style="@style/singleText"
        android:layout_below="@+id/view_ad_text"
        android:layout_toLeftOf="@+id/view_ad_click"
        android:layout_toRightOf="@+id/view_ad_img"
        android:layout_marginTop="@dimen/dp_11"
        android:text="广告"
        android:textColor="#A6A6A6"
        android:textSize="@dimen/sp_11" />

    <LinearLayout
        android:id="@+id/view_ad_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_ad_tag"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_ad_ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/view_ad_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:ellipsize="end"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#dfdfdf"/>

</RelativeLayout>