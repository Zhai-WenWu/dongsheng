<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_3"
            android:src="@drawable/z_home_nav_ico_caipu"/>

        <TextView
            android:id="@+id/tv_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_5"
            android:text="香哈小秘书"
            android:textColor="#26BC89"
            android:textSize="@dimen/sp_14"/>

        <acore.widget.TagTextView
            android:id="@+id/tv_item_admin"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_15"
            android:gravity="center"
            android:text="官方"
            android:textColor="@color/comment_color"
            android:textSize="@dimen/sp_11"
            android:visibility="visible"
            app:radius="@dimen/dp_3"
            app:sideColor="#C51721"
            app:sideWidth="@dimen/dp_0.5"/>

    </LinearLayout>

    <acore.widget.TagTextView
        android:id="@+id/feekback_msg_num"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_23"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_9"
        app:backgroundColor="@color/comment_color"
        app:radius="@dimen/dp_20"/>

    <ImageView
        android:id="@+id/iv_spector"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#e8e7d8"/>

</RelativeLayout>