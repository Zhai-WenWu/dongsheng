<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/secretary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/secretary_header"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/z_home_nav_ico_caipu"/>

        <TextView
            android:id="@+id/tv_item_user_name"
            android:layout_toRightOf="@+id/secretary_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="香哈小秘书"
            android:textColor="#26BC89"
            android:textSize="@dimen/sp_14"/>

        <acore.widget.TagTextView
            android:id="@+id/tv_item_admin"
            android:layout_toRightOf="@+id/tv_item_user_name"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="官方"
            android:textColor="@color/comment_color"
            android:textSize="@dimen/sp_11"
            android:visibility="visible"
            app:radius="@dimen/dp_3"
            app:sideColor="#C51721"
            app:sideWidth="@dimen/dp_0.5"/>

        <acore.widget.TagTextView
            android:id="@+id/feekback_msg_num"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_23"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_9"
            app:backgroundColor="@color/comment_color"
            app:radius="@dimen/dp_20"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/tv_item_user_name"
            android:layout_below="@+id/secretary_header"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#e8e7d8"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_qa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secretary"
        android:paddingTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/qa_header"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:src="@drawable/z_home_nav_ico_caipu"/>

        <TextView
            android:id="@+id/qa_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/qa_header"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_centerVertical="true"
            android:text="我的问答"
            android:textColor="#26BC89"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/qa_msg_num"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_23"
            android:background="@drawable/tv_circle_ff533c_20"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/qa_name"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/qa_header"
            android:layout_alignParentBottom="true"
            android:background="#e8e7d8"/>
    </RelativeLayout>

</RelativeLayout>