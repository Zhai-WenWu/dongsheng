<?xml version="1.0" encoding="utf-8"?>
<acore.widget.rcwidget.RCConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staggered_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home_content_shadow"
    app:round_corner_top_left="@dimen/dp_5"
    app:round_corner_top_right="@dimen/dp_5">
    <!--android:background="@drawable/bg_cccccc"-->

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_130"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintBottom_toBottomOf="@+id/img"
        android:src="@drawable/shadow_short_video"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dp_1"
        android:maxLines="2"
        android:textColor="@color/c_white_text"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img" />

    <acore.widget.rcwidget.RCImageView
        android:id="@+id/user_header_img"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        app:stroke_width="@dimen/dp_1"
        app:stroke_color="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/shadow_view"
        app:round_as_circle="true"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_2"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#bbbbbb"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@+id/user_header_img"
        app:layout_constraintEnd_toStartOf="@+id/img_fav"
        app:layout_constraintBottom_toTopOf="@+id/shadow_view"
        app:layout_constraintTop_toTopOf="@+id/guideline"/>

    <ImageView
        android:id="@+id/img_fav"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_21"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_15"
        android:padding="@dimen/dp_4"
        android:src="@drawable/icon_fav"
        app:layout_constraintBottom_toTopOf="@+id/shadow_view"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/num_tv"/>

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_7"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#bbbbbb"
        android:textSize="@dimen/sp_12"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/shadow_view"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/dp_33" />

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="@drawable/home_staggered_item_shadow_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</acore.widget.rcwidget.RCConstraintLayout>