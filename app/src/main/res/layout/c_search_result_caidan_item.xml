<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/common_bg"/>

    <RelativeLayout
        android:id="@+id/rl_caidan_more_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_more_result_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="center_vertical"
            android:text="精选菜单"
            android:textColor="#999999"
            android:textSize="@dimen/sp_13"/>

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:clickable="false"
            android:src="@drawable/iv_more_info_result_search"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/c_gray_img_e0e0e0"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_caidan_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:padding="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/ll_img_caidan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_left_caidan"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="#F0F0F0"/>

            <ImageView
                android:id="@+id/iv_img_right_caidan"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_1"
                android:src="#F0F0F0"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_desc_caidan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toRightOf="@+id/ll_img_caidan">

            <TextView
                android:id="@+id/tv_tag_caidan"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:text="菜谱名"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17"/>

            <TextView
                android:id="@+id/tv_num_caidan"
                style="@style/singleText"
                 android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="50万道菜"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/sp_11"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_observed_caidan"
                style="@style/singleText"
                android:layout_alignTop="@+id/tv_num_caidan"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_num_caidan"
                android:text="4000浏览"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/sp_11"
                android:textStyle="normal"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_caidan_item_tail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/common_bg"
        android:visibility="visible"/>

</LinearLayout>