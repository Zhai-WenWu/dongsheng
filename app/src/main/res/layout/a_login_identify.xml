<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_identify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/a_login_icon_verify"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <EditText
                android:id="@+id/et_identify"
                style="@style/login_right_round_input"
                android:layout_marginLeft="@dimen/dp_2"
                android:gravity="center_vertical"
                android:hint="请输入验证码"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_identify_request"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_round_red_identify"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="获取验证码"
            android:textColor="#ff543c"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@+id/ll_identify"
        android:background="#ededed"/>

</RelativeLayout>