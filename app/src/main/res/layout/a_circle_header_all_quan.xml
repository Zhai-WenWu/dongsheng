<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/circle_all_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="#FFFFFE">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="推荐圈子"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/z_find_home_ico_go"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/icon"
            android:text="全部"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="#ECECEC"/>

    </RelativeLayout>

    <acore.widget.CusTableLayout
        android:id="@+id/circle_table"
        android:layout_below="@+id/circle_all_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/circle_table"
        android:background="@color/common_bg"/>

</RelativeLayout>