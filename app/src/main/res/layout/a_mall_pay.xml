<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/comment_color" >

        <TextView
            android:id="@+id/title"
            style="@style/singleText"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dp_50"
            android:paddingRight="@dimen/dp_50"
            android:text="香哈收银台"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18"
            android:visibility="visible" />

        <include
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            layout="@layout/a_bar_item_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="#e1e2e4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pay_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/title_rela"
        android:background="#ffffff" >

        <TextView
            style="@style/singleText"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_15"
            android:text="请支付"
            android:textColor="#777777"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/price_num"
            style="@style/singleText"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_15"
            android:text="3.9"
            android:textColor="@color/comment_color"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="#e1e2e4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pay_type_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/pay_type"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/pay_type_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/pay_type_iv_alipay_iv"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            style="@style/singleText"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/pay_type_iv"
            android:text="支付宝支付"
            android:textColor="#777777"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/z_find_home_ico_go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="#e1e2e4" />
    </RelativeLayout>

</RelativeLayout>