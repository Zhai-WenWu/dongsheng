<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:background="@color/transparent_fe">

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e9e9e9"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/time_tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_homeitem"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/time_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#ff533c"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_1"
            android:src="@drawable/time_tag_refresh"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/post_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_tag_container"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_6"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_4"
            android:textColor="@color/c_black_text"
            android:textSize="@dimen/sp_17"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/imgs_container_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_87.5"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_fe"/>
                <View
                    android:id="@+id/layer_view1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#19ffffff"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1.5"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_fe"/>
                <View
                    android:id="@+id/layer_view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#19ffffff"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1.5"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_fe"/>

                <View
                    android:id="@+id/layer_view3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#19ffffff"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@+id/imgs_container_center"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_fe"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/top_tag"
                    android:layout_width="@dimen/dp_27"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_4"
                    android:src="@drawable/top"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/name_gourmet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_0.5"
                        android:layout_marginRight="@dimen/dp_1"
                        android:maxLength="5"
                        android:maxLines="1"
                        android:textColor="#b5b4b4"
                        android:textSize="@dimen/sp_11"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/gourmet_icon"
                        android:layout_width="@dimen/dp_11"
                        android:layout_height="@dimen/dp_11"
                        android:src="@drawable/home_item_gourmet_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/numInfoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ad_tag_center"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_16.5"
            android:layout_below="@+id/imgs_container_center"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:src="@drawable/home_item_adtag_white"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_below="@id/post_container"/>

</RelativeLayout>
