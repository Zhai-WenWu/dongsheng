<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/mall_dialog_backgroup" >

        <TextView
            android:id="@+id/dialog_title"
            style="@style/singleText"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dp_25"
            android:text="title"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="30dp"
            android:paddingTop="21dp"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:text="请先绑定手机号码,才能提现哦~"
            android:textColor="#333333"
            android:textSize="16sp"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/dialog_message" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#dbdbdb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cancel"
                    style="@style/singleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="不提现了"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/dialog_negative_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#dbdbdb"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dialog_negative"
                    style="@style/singleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="negative"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/dialog_sure_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#dbdbdb" />

                <TextView
                    android:id="@+id/confirm"
                    style="@style/singleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="绑定手机号"
                    android:textColor="#4ac867"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>