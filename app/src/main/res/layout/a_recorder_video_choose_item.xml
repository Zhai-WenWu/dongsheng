<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_4">

    <TextView
        android:id="@+id/a_video_choose_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="#fefefe"
        android:text="9月30日15时"
        android:visibility="gone"/>

    <aplug.recordervideo.view.RecorderVideoPreviewView
        android:id="@+id/a_video_choose_img1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/a_video_choose_time"
        android:background="@drawable/i_nopic"/>

</RelativeLayout>