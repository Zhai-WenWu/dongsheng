<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg" >

    <RelativeLayout
        android:id="@+id/content_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_13"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/item_rela"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_225" >

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_225" />

            <acore.widget.ImageViewVideo
                android:id="@+id/item_model_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_rela"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/item_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/item_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title_tv"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textColor="#fb6642"
                    android:textSize="@dimen/dp_12" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_location_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:minWidth="@dimen/dp_56"
                android:textColor="#666666"
                android:textSize="@dimen/dp_12"
                android:visibility="invisible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_rela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/user_head_img_rela"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_alignParentRight="true" >

                <ImageView
                    android:id="@+id/iv_userImg"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_userType"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignBottom="@+id/iv_userImg"
                    android:layout_alignRight="@+id/iv_userImg"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/user_head_img_rela"
                android:layout_marginTop="@dimen/dp_7"
                android:gravity="center_horizontal"
                android:minWidth="@dimen/dp_56"
                android:textColor="#666666"
                android:textSize="@dimen/dp_12" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/des_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_78"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15" >

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text"
            android:background="@drawable/a_gooddish_line_left" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="往期佳作"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16" />

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text"
            android:background="@drawable/a_gooddish_line_right" />
    </RelativeLayout>

</RelativeLayout>