<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <amodule._common.plugin.WidgetVerticalLayout
        android:id="@+id/banner_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <amodule._common.widget.BannerView
            app:bgKey="lessonbannerBg"
            android:id="@+id/banner_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </amodule._common.plugin.WidgetVerticalLayout>

    <amodule._common.plugin.WidgetVerticalLayout
        android:id="@+id/horizontal1_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include
            layout="@layout/widget_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </amodule._common.plugin.WidgetVerticalLayout>

    <amodule._common.plugin.WidgetVerticalLayout
        android:id="@+id/horizontal2_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include
            layout="@layout/widget_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </amodule._common.plugin.WidgetVerticalLayout>

</LinearLayout>