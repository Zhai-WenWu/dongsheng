<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_caipu"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_120"
        android:padding="@dimen/dp_15">

        <acore.widget.ImageViewVideo
            android:id="@+id/iv_caipuCover"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/i_nopic"/>

        <acore.widget.TagTextView
            xmlns:tagTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_itemIsSolo"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_15"
            android:layout_below="@+id/dish_recom_item_today_layout"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:text="独家"
            android:textColor="@color/dish_gray_bg_list"
            android:textSize="@dimen/sp_10"
            tagTextView:backgroundColor="@color/dish_yellow_bg_title"
            tagTextView:radius="@dimen/dp_1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/iv_caipuCover"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_caipuCover"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <TextView
                    android:id="@+id/tv_caipu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:lines="1"
                    android:maxWidth="@dimen/dp_150"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                />

                <TextView
                    android:id="@+id/iv_itemIsFine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_2.5"
                    android:layout_toRightOf="@+id/tv_caipu_name"
                    android:background="@drawable/search_tag_view"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_2.5"
                    android:paddingRight="@dimen/dp_2.5"
                    android:text="精"
                    android:textColor="@color/comment_color"
                    android:textSize="@dimen/sp_11"
                    android:visibility="visible"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_caipu_decrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6.5"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#333333"
                android:textSize="@dimen/sp_11"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_caipu_firsttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#b3b3b3"
                    android:textSize="@dimen/sp_10"/>

                <TextView
                    android:id="@+id/tv_caipu_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#b3b3b3"
                    android:textSize="@dimen/sp_10"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_caipu_observed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_11"/>

                <TextView
                    android:id="@+id/tv_caipu_collected"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_caipu_item_tail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/rl_caipu"
        android:visibility="gone"/>

    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#EAE8E0"/>
</LinearLayout>