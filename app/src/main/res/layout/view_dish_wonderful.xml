<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wonferful_linear_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:background="#fffffe"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:text="精选作品"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#ececec" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wonferful_rela_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffe">

        <RelativeLayout
            android:id="@+id/rela_1_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fffffe"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_11"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_14">

            <ImageView
                android:id="@+id/auther_userImg"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:background="@drawable/bg_round_zannum"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/auther_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_toRightOf="@+id/auther_userImg"
                android:ellipsize="end"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:singleLine="true"
                android:text="名字"
                android:textColor="#999999"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>

        <amodule.user.view.UserIconView
            android:id="@+id/usericonview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rela_1_user"
            android:layout_alignTop="@+id/rela_1_user"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toRightOf="@+id/rela_1_user"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_1" />



        <RelativeLayout
            android:id="@+id/caipu_follow_rela"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_dish_follow_5">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/caipu_follow_img"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dish_follow_a"/>
                <TextView
                    android:id="@+id/caipu_follow_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_1.5"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/comment_color"
                    android:text="关注"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wonferful_rela_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

</LinearLayout>