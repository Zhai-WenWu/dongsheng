<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15" >

    <RelativeLayout
        android:id="@+id/product_none_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <third.mall.widget.ListViewForScrollView
            android:id="@+id/product_list_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:gravity="center"
            android:background="#fff"
            android:layout_below="@+id/product_list_none" >

            <acore.widget.TagTextView
                xmlns:tagTextView="http://schemas.android.com/apk/res-auto"
                tagTextView:radius="@dimen/dp_2"
                tagTextView:sideColor="@color/comment_color"
                tagTextView:sideWidth="@dimen/dp_0.5"
                android:id="@+id/product_text_none"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:text="删除无效商品"
                android:textColor="@color/comment_color"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>