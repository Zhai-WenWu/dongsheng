<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dish_recom_item_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:background="#F5F5F5"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15" >

    <acore.widget.ImageViewVideo
        android:id="@+id/iv_video_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/i_nopic" />

    <ImageView
        android:id="@+id/draft_item_dele"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/i_ico_del" />

    <RelativeLayout
        android:id="@+id/dish_recom_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_w2g"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_12" >

        <TextView
            android:id="@+id/draft_tv_name"
            style="@style/shadowTextBlack"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_above="@+id/draft_tv_ingre"
            android:text="name"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/draft_tv_ingre"
            style="@style/shadowTextBlack"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/draft_tv_addTime"
            android:layout_alignLeft="@+id/draft_tv_name"
            android:layout_toLeftOf="@+id/draft_tv_addTime"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/draft_tv_addTime"
            style="@style/shadowTextBlack"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</RelativeLayout>