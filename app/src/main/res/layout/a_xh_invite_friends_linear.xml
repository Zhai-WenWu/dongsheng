<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/invite_friends_invite_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/invite_friend_s_backgroup"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:paddingTop="@dimen/dp_14" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的邀请码，用来邀请好友可得100积分"
            android:textColor="@color/invite_friend_text_color"
            android:textSize="@dimen/sp_13" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_13" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/invite_friends_invite"
                android:background="@drawable/bg_rectangle_invitefriends_linear" >

                <TextView
                    android:id="@+id/invite_friends_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#5C5C5B"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/invite_friends_invite"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_34"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_rectangle_invitefriends_red" >

                <TextView
                    android:id="@+id/invite_friends_number_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="邀请"
                    android:textColor="@color/c_white_text"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="#EDEDED" />

    <LinearLayout
        android:id="@+id/invite_friends_recomme_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/invite_friend_s_backgroup"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_14" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的香哈菜谱是朋友推荐"
            android:textColor="@color/invite_friend_text_color"
            android:textSize="@dimen/sp_13" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_13" >

            <EditText
                android:id="@+id/edit_num"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/invite_friends_sure"
                android:background="@drawable/bg_rectangle_invitefriends_edit_white"
                android:gravity="center"
                android:hint="输入朋友的邀请码"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/invite_friends_sure"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_34"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_rectangle_invitefriends_greed" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确定"
                    android:textColor="@color/c_white_text"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/invite_friends_recomme_already"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:visibility="gone"
        android:background="@color/invite_friend_s_backgroup" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/invite_friends_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的设备已被好友“忙吗”邀请"
                android:textColor="#AFAFAF"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:text="每个设备只能被邀请一次"
                android:textColor="#AFAFAF"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/invite_xiangha_recomme_already"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:visibility="gone"
        android:background="@color/invite_friend_s_backgroup" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/invite_xiangha_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的设备已被“香哈网”邀请"
                android:textColor="#AFAFAF"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/invite_xiangha_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="点击领取积分"
                android:textColor="@color/comment_color"
                android:padding="@dimen/dp_8"
                android:background="@drawable/bg_rectangle_invitefriends_red_but"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/recomme_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="#EDEDED" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white_bg_title"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24"
        android:paddingTop="@dimen/dp_20" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="@dimen/dp_3"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@color/invite_friend_linear_red_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贴心提示"
                android:textColor="@color/invite_friend_text_textcolor"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_19" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:text="1."
                android:textColor="#ABABAB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_6"
                android:text="被邀请的好友在此之前没有下载或者登录过香哈菜谱。"
                android:textColor="#ABABAB"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:text="2."
                android:textColor="#ABABAB" />

            <TextView
                android:id="@+id/invite_friends_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_6"
                android:text="@string/invite_friends_explain"
                android:textColor="#ABABAB"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:text="3."
                android:textColor="#ABABAB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_6"
                android:text="该规则从2015年7月20日起生效，在此之前下载并登录过香哈菜谱的设备（含手机、平板电脑等）不在此次赠送积分的范围内"
                android:textColor="#ABABAB"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>