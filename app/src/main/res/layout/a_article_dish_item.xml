<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">

    <ImageView
        android:id="@+id/dish_image"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_105"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:layout_alignBottom="@+id/dish_image"
        android:layout_alignTop="@+id/dish_image"
        android:layout_toRightOf="@+id/dish_image"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_14">

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#535353"
            android:textSize="@dimen/sp_17"/>

        <TextView
            android:id="@+id/dish_browse"
            android:layout_below="@+id/dish_name"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:textColor="#BFBFBF"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dish_favorite"
            android:layout_below="@+id/dish_name"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/dish_browse"
            android:textColor="#BFBFBF"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dish_customer_name"
            android:layout_below="@+id/dish_browse"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_width="wrap_content"
            android:textColor="#BFBFBF"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>