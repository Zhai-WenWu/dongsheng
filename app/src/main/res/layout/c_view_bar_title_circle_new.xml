<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_height"
    android:background="@color/comment_color" >

    <ImageView
        android:id="@+id/circle_add_my_circle"
        android:layout_width="@dimen/dp_45"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@drawable/z_circle_join_ico" />

    <LinearLayout
        android:id="@+id/linear_choose"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_main_circle_title" >

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:textColor="@color/comment_color"
            android:text="圈子"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/bg_main_circle_title_withe" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:textColor="#fffffe"
            android:text="推荐"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:background="@color/transparent" />
        <TextView
            android:id="@+id/tv_three"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:textColor="#fffffe"
            android:text="推荐"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:background="@color/transparent" />
    </LinearLayout>
     <TextView
        android:id="@+id/circle_title"
        style="@style/singleText"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:gravity="center"
        android:text="生活圈"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />


</RelativeLayout>