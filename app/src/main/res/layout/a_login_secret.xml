<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_data_secret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_phone_icon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_19"
            android:background="@drawable/a_login_icon_password"
            android:clickable="false"
            android:focusable="false" />

        <EditText
            android:id="@+id/et_user_secret"
            style="@style/login_right_round_input"
            android:layout_marginLeft="@dimen/dp_2"
            android:digits="@string/pwd_rule"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:hint="密码"
            android:singleLine="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dp_27"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/a_login_icon_shutdown"
            android:padding="@dimen/dp_5"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_state_secret"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:background="@drawable/a_login_button_password"
            android:visibility="visible" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@+id/ll_data_secret"
        android:background="#ededed" />

</RelativeLayout>