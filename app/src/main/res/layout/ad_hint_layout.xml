<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_7.5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ad_gdt_video_hint_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_9"
        android:orientation="horizontal">

        <acore.widget.TagTextView
            android:id="@+id/ad_vip_lead"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="会员免广告"
            android:textColor="#FFFFFE"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:backgroundColor="#B2000000" />

        <acore.widget.TagTextView
            android:id="@+id/ad_skip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ad_vip_lead"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_8"
            android:text="跳过"
            android:textColor="#FFFFFE"
            android:textSize="@dimen/sp_12"
            app:backgroundColor="#B2000000" />

        <TextView
            android:id="@+id/ad_gdt_video_num"
            style="@style/adGdtTextStyle"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ad_skip"
            android:background="#B2000000"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_8"
            android:text="3"
            android:textColor="#ff0000"
            android:textSize="@dimen/sp_15" />

        <View
            android:id="@+id/ad_line"
            android:layout_width="1px"
            android:layout_height="@dimen/dp_12"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/ad_vip_lead"
            android:background="#fefefe" />

    </RelativeLayout>

    <acore.widget.TagTextView
        android:id="@+id/see_detail"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_27"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12.5"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:text="查看详情"
        android:textColor="#FFFFFE"
        android:textSize="@dimen/sp_13"
        app:backgroundColor="#B2000000"
        app:radius="@dimen/dp_25" />

</RelativeLayout>