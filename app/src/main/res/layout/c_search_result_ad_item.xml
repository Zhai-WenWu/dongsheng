<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_ad"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_120"
        android:padding="@dimen/dp_15">

        <acore.widget.ImageViewVideo
            android:id="@+id/iv_adCover"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/i_nopic"/>
        
        <ImageView
            android:id="@id/icon_ad_gdt"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_13.5"
            tools:visibility="visible"
            android:scaleType="fitEnd"
            android:visibility="gone"
            android:layout_alignRight="@+id/iv_adCover"
            android:layout_alignBottom="@+id/iv_adCover"
            android:src="@drawable/icon_ad_gdt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/iv_adCover"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_adCover"
            android:paddingRight="@dimen/dp_15"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <TextView
                    android:id="@+id/tv_ad_name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:layout_alignParentTop="true"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_17"
                    />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_ad_decrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6.5"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#333333"
                android:textSize="@dimen/sp_11"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ad_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="广告"
                    android:lines="1"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/sp_10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ad_observed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#EAE8E0"/>

    <View
        android:id="@+id/v_ad_item_tail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/rl_ad"
        android:background="@color/common_bg"
        android:visibility="gone"/>
</RelativeLayout>