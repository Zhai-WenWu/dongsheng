<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/a_dish_time_rl"
             android:layout_width="match_parent"
             android:layout_height="@dimen/topbar_height"
             android:background="@color/common_top_bg">

    <include
        android:id="@+id/ll_back"
        layout="@layout/a_bar_item_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <acore.widget.PagerSlidingTabStrip
            android:id="@+id/dish_time_title_slide"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/topbar_height"
            app:pstsIndicatorColor="#FFFFFE"
            app:pstsIndicatorWidthFollowText="true"
            app:pstsTabBackground="@color/common_top_bg"
            app:pstsTabPaddingLeftRight="@dimen/dp_12.5"
            app:pstsTabTextColor="@color/common_top_text"
            app:pstsTabTextSize="@dimen/sp_16"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dish_time_shareImgV"
            android:layout_width="@dimen/dp_18"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/z_z_topbar_ico_share"
            android:visibility="visible"/>

    </RelativeLayout>

</FrameLayout>