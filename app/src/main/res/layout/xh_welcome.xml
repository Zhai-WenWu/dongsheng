<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout"
    android:background="#FFFFFE">

    <RelativeLayout
        android:id="@+id/welcome_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_welcome">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_100"
            android:src="@drawable/welcome_big"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/ad_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_welcome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_105"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_22.5"
        android:paddingTop="@dimen/dp_27.5">

        <ImageView
            android:id="@+id/iv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:scaleType="fitCenter"
            android:src="@drawable/welcome" />

    </LinearLayout>
<LinearLayout
    android:id="@+id/ad_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_24"
    android:layout_alignParentRight="true"
    android:orientation="horizontal">
    <acore.widget.TagTextView xmlns:tagTextView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_vip_lead"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="会员免广告"
        android:textColor="#FFFFFE"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        tagTextView:backgroundColor="#B2000000"
        tagTextView:bottomLeftRadius="@dimen/dp_20"
        tagTextView:topLeftRadius="@dimen/dp_20"
        />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:src="#FFFFFE"
        android:layout_gravity="center"
        android:background="#B2000000"/>
    <acore.widget.TagTextView xmlns:tagTextView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_skip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="跳过"
        android:textColor="#FFFFFE"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        tagTextView:backgroundColor="#B2000000"
        tagTextView:bottomRightRadius="@dimen/dp_20"
        tagTextView:topRightRadius="@dimen/dp_20" />
</LinearLayout>

</RelativeLayout>