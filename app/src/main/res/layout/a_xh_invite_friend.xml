<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout"
    android:background="@android:color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:visibility="visible" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="#EBEBEB" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_240"
                android:paddingTop="@dimen/dp_57.5" >

                <ImageView
                    android:id="@+id/invite_friend_image"
                    android:layout_width="@dimen/dp_125"
                    android:layout_height="@dimen/dp_125"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_er_wei_ma"
                    android:padding="@dimen/dp_3.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invite_friend_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="[ 扫我下载 ]"
                    android:textColor="#E84544"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line_invitefriends"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11" >

                <View
                    android:id="@+id/right_line"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#E5E5E5" />

                <View
                    android:id="@+id/right_disn"
                    android:layout_width="@dimen/dp_1.5"
                    android:layout_height="@dimen/dp_1.5"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/right_line"
                    android:background="@drawable/bg_round_grey_e5_5" />

                <ImageView
                    android:id="@+id/invite_friend_star"
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_11"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_toLeftOf="@+id/right_disn"
                    android:background="@drawable/invite_friend_star" />

                <View
                    android:id="@+id/left_disn"
                    android:layout_width="@dimen/dp_1.5"
                    android:layout_height="@dimen/dp_1.5"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/invite_friend_star"
                    android:background="@drawable/bg_round_grey_e5_5" />

                <View
                    android:id="@+id/left_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/left_disn"
                    android:background="#E5E5E5" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/invite_friend_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>