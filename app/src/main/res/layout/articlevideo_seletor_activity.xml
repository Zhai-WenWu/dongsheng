<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_rela_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/common_top_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@drawable/btn_back"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/top_text_other"
                android:background="@null"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="取消"/>

            <TextView
                android:id="@+id/title"
                style="@style/top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="香哈视频"/>

            <Button
                android:id="@+id/category_btn"
                style="@style/top_text_other"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:text="相册"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_bar"
        android:layout_below="@+id/title_rela_all">

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_7"
            android:clipToPadding="false"
            android:numColumns="4"
            android:padding="@dimen/dp_3"
            android:scrollbars="none"
            android:scrollbarStyle="outsideOverlay"
            android:listSelector="@null"
            android:verticalSpacing="@dimen/dp_3"
            android:horizontalSpacing="@dimen/dp_3"
            android:overScrollMode="never"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dish_video_choose_hint"
        android:layout_below="@+id/title_all_rela"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_above="@+id/recorder_video_choose_hint_tv"
            android:layout_centerHorizontal="true"
            android:src="@drawable/i_recorder_video_nodata"/>

        <TextView
            android:id="@+id/recorder_video_choose_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_40"
            android:textSize="@dimen/sp_16"
            android:textColor="#999"
            android:text="暂无视频"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:visibility="invisible">

        <VideoView
            android:id="@+id/article_pre_videoview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_213"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignBottom="@+id/article_pre_videoview"
            android:background="@drawable/bg_gradient_black_alpha40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/article_pre_videoview"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_centerHorizontal="true"
            android:text="轻触选择"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_white_text"/>

    </RelativeLayout>

</RelativeLayout>