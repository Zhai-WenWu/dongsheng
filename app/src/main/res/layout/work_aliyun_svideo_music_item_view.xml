<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55"
    android:background="@android:color/transparent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#3b3b3b"/>

    <ImageView
        android:id="@+id/music_select_img"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/aliyun_svideo_music_item_normal" />


    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/music_select_img"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/dp_200"
        android:minWidth="0dp"
        android:text="@string/my_music"
        android:textColor="#a0a0a0"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/selected_flag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/aliyun_svideo_music_item_arrow" />

        <TextView
            android:id="@+id/music_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aliyun_download"
            android:textColor="#848484"
            android:textSize="@dimen/dp_12"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/progressBar"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/z_ico_refresh_active"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>