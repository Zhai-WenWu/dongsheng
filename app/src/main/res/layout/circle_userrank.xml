<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quan_userrank"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@color/backgroup_color"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_num"
            android:layout_width="@dimen/dp_28"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_23"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/user_head_img_rela"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/iv_userImg"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_round_zannum"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_userType"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_alignBottom="@+id/iv_userImg"
                    android:layout_alignRight="@+id/iv_userImg"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_7"
                android:layout_toRightOf="@+id/user_head_img_rela" >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/user_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:textColor="#009933"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_11" />

                <amodule.user.view.UserIconView
                    android:id="@+id/usericonview"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/user_name" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:background="@drawable/i_ico_homepage_right_more" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="#ffffff" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#dfdfdf" />
    </RelativeLayout>

</RelativeLayout>