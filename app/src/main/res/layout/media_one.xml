<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_img"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

<RelativeLayout
    android:id="@+id/media_middle_rela"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_8"
    android:layout_centerInParent="true">
    <LinearLayout
        android:id="@+id/media_middle_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_7">

        <TextView
            android:id="@+id/media_middle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFE"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dp_30"
            android:text="黄国俊的时刻"/>
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_2.5"
            android:background="#fffffe"/>
        <TextView
            android:id="@+id/media_middle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFE"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/dp_15"
            android:text="DSKDJSKKDSJDKS"/>
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>