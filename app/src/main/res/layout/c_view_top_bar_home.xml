<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:background="@color/common_top_bg">


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="@dimen/dp_5.5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/transparent"
        android:src="@drawable/home_bar_upload_but"/>

    <LinearLayout
        android:id="@+id/fenlei_linear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/transparent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/home_bar_felei"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_13"
        android:text="分类"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ed_search_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_round_999999_23"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/btn_back"
        android:layout_toLeftOf="@+id/fenlei_linear">

        <ImageView
            android:id="@+id/a_home_search_icon"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_3"
            android:scaleType="centerCrop"
            android:background="@color/transparent"
            android:src="@drawable/home_bar_search_iv"/>

        <TextView
            android:id="@+id/tv_search_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/a_home_search_icon"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="搜菜谱、食材等"
            android:maxLength="15"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/common_top_search_text"
            android:textSize="@dimen/sp_13"/>

    </RelativeLayout>
</RelativeLayout>