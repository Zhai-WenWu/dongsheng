<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <acore.widget.DownRefreshList
        android:id="@+id/favorable_list"
        style="@style/listNoDivider"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:visibility="gone">
    </acore.widget.DownRefreshList>

    <RelativeLayout
        android:id="@+id/rela_favorable_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:visibility="gone">

        <ImageView
            android:id="@+id/favorable_iv"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mall_myfavorable_none_iv"/>

        <TextView
            android:id="@+id/favorable_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favorable_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_23"
            android:text="您暂时还没有优惠券~"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/dp_17"/>

        <acore.widget.TagTextView
            xmlns:tagTextView="http://schemas.android.com/apk/res-auto"
            tagTextView:backgroundColor="@color/common_bg"
            tagTextView:radius="@dimen/dp_2"
            tagTextView:sideColor="#9e9e9e"
            tagTextView:sideWidth="@dimen/dp_0.5"
            android:id="@+id/favorable_more"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_33"
            android:layout_below="@+id/favorable_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:text="更多好券"
            android:textColor="#696969"
            android:textSize="@dimen/dp_15"/>
    </RelativeLayout>

</RelativeLayout>