<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityLayout"
    android:orientation="vertical" >
    
    <ScrollView
        android:id="@+id/slv_dish" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comment_back_color"
		android:scrollbars="none"
        android:visibility="gone">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">
    
		    <TextView 
		        android:id="@+id/tv_recommendTitle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/dp_15"
		        android:layout_marginTop="@dimen/dp_15"
		    	android:textSize="@dimen/sp_14"
		    	android:textColor="#000"
		        android:text="小编推荐"/>
		    
		    <TableLayout
                android:id="@+id/tl_dish" 
                style="@style/tableLayout"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@android:color/transparent" />
		    
		    <TextView 
		        android:id="@+id/tv_classifyTitle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/dp_12"
		        android:layout_marginLeft="@dimen/dp_15"
		    	android:textSize="@dimen/sp_14"
		    	android:textColor="#000"
		        android:text="视频分类"/>
		    
		    <TableLayout
		        android:id="@+id/tl_dish_video" 
                style="@style/tableLayout"
                android:layout_marginTop="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_11.5"
                android:paddingRight="@dimen/dp_11.5"
                android:background="@android:color/transparent" />
		    
		    <RelativeLayout
                android:id="@+id/dish_recommend_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"/>
		    
		    <Button
                android:id="@+id/btn_submit"
                style="@style/d_uploadDishAddText"
                android:layout_height="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/btn_round_read_submit"
                android:gravity="center"
                android:text="查看更多高清视频"
                android:textSize="@dimen/dp_14"
                android:textColor="#fff" />
		    
	    </LinearLayout>
    </ScrollView>

</RelativeLayout>
