<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/title_rela_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <include
            android:id="@+id/dish_title"
            layout="@layout/a_dish_detail_bar_title" />
    </RelativeLayout>

    <acore.widget.ScrollviewDish
        android:id="@+id/dish_detail_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_rela_all"
        android:background="@color/common_bg"
        android:overScrollMode="never"
        android:visibility="gone">

        <RelativeLayout
            style="@style/layout"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/dishVidio"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_220"
                android:visibility="gone" />
            <!--  -->
            <LinearLayout
                style="@style/layout"
                android:layout_below="@+id/dishVidio"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/cusImg"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bg_round_grey_e0e0e0_50" />

                    <ImageView
                        android:id="@+id/cusType"
                        android:layout_width="@dimen/dp_7.5"
                        android:layout_height="@dimen/dp_7.5"
                        android:layout_alignBottom="@+id/cusImg"
                        android:layout_alignRight="@+id/cusImg"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_2"
                        android:clickable="true"
                        android:src="@drawable/z_user_gourmet_ico"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/cusName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/allClick"
                        android:layout_alignBottom="@+id/allClick"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_6"
                        android:clickable="true"
                        android:paddingBottom="0dp"
                        android:singleLine="true"
                        android:text="cusName"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_11" />

                    <TextView
                        android:id="@+id/dishName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/cusName"
                        android:background="@android:color/transparent"
                        android:paddingRight="@dimen/dp_20"
                        android:text="dishName"
                        android:textColor="#343434"
                        android:textSize="@dimen/sp_21"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/allClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/dishName"
                        android:layout_below="@+id/dishName"
                        android:paddingTop="@dimen/dp_6"
                        android:singleLine="true"
                        android:text="allClick"
                        android:textColor="#a0a0a0"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/exp1"
                    style="@style/d_showDishTitle"
                    android:paddingBottom="0dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_27"
                    android:text="心得"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/exp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:lineSpacingMultiplier="1"
                    android:paddingBottom="0dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_11"
                    android:textColor="#2c2c2c"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/healthStr1"
                    style="@style/d_showDishTitle"
                    android:paddingBottom="0dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_27"
                    android:text="养生必读"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/healthStr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_11"
                    android:visibility="gone" />

                <TableLayout
                    android:id="@+id/yongliao"
                    style="@style/tableLayout"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <TableRow android:layout_marginBottom="@dimen/dp_0.5">

                        <TextView
                            android:id="@+id/yongliao_tv"
                            style="@style/d_showDishTitle"
                            android:paddingBottom="@dimen/dp_13"
                            android:text="用料"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/ad_parent_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_15">

                    <RelativeLayout
                        android:id="@+id/dish_detail_burden_ad_bd_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15" />

                    <RelativeLayout
                        android:id="@+id/dish_detail_burden_ad_banner_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15" />

                    <include
                        android:id="@+id/a_dish_detail_burden_ad_banner_bottom"
                        layout="@layout/ad_banner_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15" />
                </LinearLayout>

                <!--  <ImageView
                     android:id="@+id/dish_detail_activity"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/dp_15"
                     android:layout_marginLeft="@dimen/dp_15"
                     android:layout_marginRight="@dimen/dp_15"
                     android:clickable="true"
                     android:scaleType="fitXY"
                     android:visibility="gone" /> -->


                <TableLayout
                    android:id="@+id/zuofa"
                    style="@style/tableLayout"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/make1"
                                style="@style/d_showDishTitle"
                                android:layout_width="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="做法"
                                android:textStyle="bold" />
                            <!--
                                TextView
	                            style="@style/showDishTitle"
	                            android:textSize="12sp"
	                            android:text="（点击步骤可开启语音）"
                            -->
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/tieshi1"
                    style="@style/d_showDishTitle"
                    android:paddingBottom="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_13"
                    android:text="小贴士"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!--                     android:lineSpacingMultiplier="1.2" -->
                <TextView
                    android:id="@+id/tieshi2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="#2c2c2c"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_13">

                    <RelativeLayout
                        android:id="@+id/dish_detail_ad_tip_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15" />

                    <RelativeLayout
                        android:id="@+id/dish_detail_banner_ad_tip_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15" />

                    <include
                        android:id="@+id/a_dish_detail_ad_tip_banner_bottom"
                        layout="@layout/ad_banner_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15" />
                </LinearLayout>

                <third.mall.view.MalladvertView
                    android:id="@+id/mall_advert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/a_dish_detail_ad_mall_bottom"
                    layout="@layout/ad_banner_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15" />

                <RelativeLayout
                    android:id="@+id/xiangguan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/commit_ing"
                        style="@style/d_showDishTitle"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingBottom="@dimen/dp_9"
                        android:paddingTop="0dp"
                        android:text="大家照着做的"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/xiangguan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"></LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:id="@+id/uploadMyDish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/btn_round_read_submit"
                    android:clickable="true"
                    android:onClick="doUpload">

                    <ImageView
                        android:layout_width="@dimen/dp_22.5"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@+id/textView1"
                        android:src="@drawable/i_ico_upload_dish" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_36.5"
                        android:text="上传我做的这道菜"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_30"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <TextView
                        style="@style/d_showDishTitle"
                        android:padding="0dp"
                        android:text="相关视频"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_video_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部"
                            android:textColor="#848484"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/iv_score_rule"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_1"
                            android:src="@drawable/z_surp_score_rule" />
                    </LinearLayout>

                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/hsv_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:scrollbars="none"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_pinglunHint"
                    style="@style/d_showDishTitle"
                    android:paddingBottom="0dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="精彩评论"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_pinglun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/z_dish_pinglun" />

                    <TextView
                        android:id="@+id/tv_pinglun"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="反馈"
                        android:textColor="@color/comment_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/dish_detail_tip_ad_layout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10.5"
                    android:paddingRight="@dimen/dp_10.5"
                    android:paddingTop="@dimen/dp_15" />

                <RelativeLayout
                    android:id="@+id/dish_detail_tip_ad_layout_bottom_gdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10.5"
                    android:paddingRight="@dimen/dp_10.5"
                    android:paddingTop="@dimen/dp_15" />

                <include
                    android:id="@+id/a_dish_detail_ad_banner_bottom"
                    layout="@layout/ad_banner_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15" />

            </LinearLayout>
        </RelativeLayout>
    </acore.widget.ScrollviewDish>

    <View
        android:id="@+id/view_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/title_rela_all"
        android:background="#cdcdcd"
        android:visibility="gone" />

</RelativeLayout>