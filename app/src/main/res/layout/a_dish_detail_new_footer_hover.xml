<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

    <LinearLayout
        android:id="@+id/a_dish_detail_new_footer_hover_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_1"
        android:background="#f9fffffe"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/a_dish_detail_new_footer_hover_good_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/a_dish_detail_new_footer_hover_good_show"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_17.5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_1.5"
                android:src="@drawable/i_dish_detail_zan" />

            <TextView
                android:id="@+id/a_dish_detail_new_footer_hover_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#333"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/dp_26"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/i_dish_detail_qustion" />

            <TextView
                android:id="@+id/a_dish_detail_new_footer_hover_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_6"
                android:gravity="center"
                android:text="向作者提问"
                android:textColor="@color/comment_color"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_dish_detail_new_footer_hover_good_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_1"
        android:background="#f9fffffe"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/a_dish_detail_new_footer_hover_trample"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/a_dish_hover_img"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_17.5"
                android:src="@drawable/i_not_good" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_7"
                android:gravity="center"
                android:text="没用"
                android:textColor="#333"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/dp_26"
            android:background="#ccc" />

        <LinearLayout
            android:id="@+id/a_dish_detail_new_footer_hover_good"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/a_dish_hover_good_img"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_17.5"
                android:src="@drawable/i_good_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toRightOf="@+id/a_dish_detail_new_footer_hover_number"
                android:gravity="center"
                android:text="有用"
                android:textColor="#333"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@drawable/bg_line_shadow"
        android:scaleType="fitXY"
        android:visibility="visible"
        />

    <View
        android:id="@+id/line_2"
        style="@style/lineView"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_20" />

</RelativeLayout>