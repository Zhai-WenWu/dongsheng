<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1eee4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffe"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
         >

        <ImageView
            android:id="@+id/item_choose"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_55"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_19"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_19"
            android:scaleType="fitXY"
            android:src="@drawable/z_mall_shopcat_no_choose" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_choose"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10" >

            <RelativeLayout
                android:id="@+id/item_rela_price"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minHeight="@dimen/dp_42" >

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/comment_color"
                    android:textSize="@dimen/dp_30" />

                <TextView
                    android:id="@+id/item_price_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_toRightOf="@+id/item_price"
                    android:text="元"
                    android:paddingTop="@dimen/dp_8"
                    android:layout_centerVertical="true"
                    android:textColor="@color/comment_color"
                    android:textSize="@dimen/dp_12" />
            </RelativeLayout>

            <View
                android:id="@+id/line_middle"
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_rela_price"
                android:background="@drawable/mall_favorable_dialog_line_void_bg"
                android:minHeight="@dimen/dp_42" />

            <LinearLayout
                android:id="@+id/item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/line_middle"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中..."
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:singleLine="true"
                    android:text="加载中..."
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/item_choose"
            android:background="#e1e2e4" />
    </RelativeLayout>

</RelativeLayout>