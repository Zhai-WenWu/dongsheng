<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    tools:ignore="HardcodedText,ContentDescription,RtlHardcoded,UselessParent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffe" >

        <ImageView
            android:id="@+id/iv_change_state"
            android:layout_width="@dimen/dp_53"
            android:layout_height="@dimen/dp_19"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:src="@drawable/z_mall_address_no_changer" />

        <RelativeLayout
            android:id="@+id/rela_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rela_address_edit"
            android:layout_toRightOf="@+id/iv_change_state"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_11" >

            <RelativeLayout
                android:id="@+id/rela_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5" >

                <TextView
                    android:id="@+id/tv_state_defult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:text="[默认]"
                    android:textColor="@color/comment_color"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@+id/tv_state_defult"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_address_iphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_address_name"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_address_title"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rela_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_18"
            android:paddingTop="@dimen/dp_18" >

            <ImageView
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="match_parent"
                android:background="#e0e0e0"
                android:minHeight="@dimen/dp_32" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/iv_address_edit"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/dp_13"
                    android:paddingRight="@dimen/dp_13"
                    android:src="@drawable/mall_address_itme_edit" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>