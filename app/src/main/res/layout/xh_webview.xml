<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout" >

    <aplug.web.view.XHWebView
        android:id="@+id/XHWebview"
        android:overScrollMode="never"
        android:layerType="hardware"
        style="@style/layout"
        android:scrollbars="none"/>
      <LinearLayout
          android:id="@+id/mall_mercat_linear" 
          android:layout_width="match_parent"
          android:layout_alignParentBottom="true"
          android:background="#f5f5f5"
          android:baselineAligned="false"
          android:visibility="gone"
          android:layout_height="@dimen/dp_45">
          <LinearLayout
            android:id="@+id/product_feek" 
            android:layout_width="0dip"
            android:layout_marginTop="@dimen/dp_0.5"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal">
              
              <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/z_mall_commod_mercat_iv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_1.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="联系客服"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
          </LinearLayout>
           <LinearLayout
            android:id="@+id/product_mercat" 
            android:layout_width="0dip"
            android:layout_marginTop="@dimen/dp_0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_0.5"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal">
              
              <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/z_mall_commod_mercat_iv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_1.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="店铺详情"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
          </LinearLayout>
      </LinearLayout>

      <RelativeLayout
            android:id="@+id/shopping_layout_mall"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_141"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/image_cart"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_7"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_7"
                android:background="@drawable/bg_mall_oval_shopping_img" />

            <TextView
                android:id="@+id/mall_news_num_mall"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_4.5"
                android:background="@drawable/bg_circle_red_20"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mall_news_num_two_mall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4.5"
                android:background="@drawable/bg_circle_red_20"
                android:gravity="center_horizontal|center_vertical"
                android:minWidth="@dimen/dp_18"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="12+"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_10"
                android:visibility="gone" />

        </RelativeLayout>
</RelativeLayout>