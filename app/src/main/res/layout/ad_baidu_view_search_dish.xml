<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_nocolor">

    <acore.widget.ImageViewVideo
        android:id="@+id/ad_baidu_view_search_dish_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_85"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ad_layout"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:scaleType="fitXY"
        android:src="@drawable/i_nopic"/>


    <TextView
        android:id="@+id/ad_baidu_view_search_dish_title"
        style="@style/singleText"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toRightOf="@+id/ad_baidu_view_search_dish_img"
        android:text="title"
        android:textColor="#333333"
        android:textSize="@dimen/sp_19"/>

    <TextView
        android:id="@+id/ad_baidu_view_search_dish_content"
        style="@style/singleText"
        android:layout_below="@+id/ad_baidu_view_search_dish_title"
        android:layout_toRightOf="@+id/ad_baidu_view_search_dish_img"
        android:gravity="center_vertical|left"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_9"
        android:text="content"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/ad_tuiguang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_baidu_view_search_dish_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/ad_baidu_view_search_dish_img"
        android:padding="@dimen/dp_2"
        android:text="@string/ad_hint_text"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/ad_ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_baidu_view_search_dish_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toRightOf="@+id/ad_tuiguang"
        android:layout_alignBaseline="@+id/ad_tuiguang"
        android:padding="@dimen/dp_2"
        android:text="100浏览"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@+id/ad_baidu_view_search_dish_img"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#ECECEC"/>

</RelativeLayout>