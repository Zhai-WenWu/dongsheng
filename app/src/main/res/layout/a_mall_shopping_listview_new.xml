<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_15" >

    <RelativeLayout
        android:id="@+id/rela_shopping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"
        android:background="#FEFEFE"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15" >

        <ImageView
            android:id="@+id/choose_iv_boss"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/z_mall_shopcat_no_choose" />

        <ImageView
            android:id="@+id/shopping_logo_iv"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/choose_iv_boss"
            android:background="#097569" />

        <TextView
            android:id="@+id/shopping_logo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/shopping_logo_iv"
            android:text="香哈"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/order_logistics_back"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_toRightOf="@+id/shopping_logo_tv"
            android:layout_marginLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_1"
            android:layout_centerVertical="true"
            android:src="@drawable/z_find_home_ico_go" />
         <TextView
            android:id="@+id/get_favorable_tv"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/dp_3"
            android:text="领券"
            android:textColor="#858791"
            android:textSize="@dimen/sp_13" />

         <View
             android:id="@+id/favorable_line"
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="@dimen/dp_13"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/get_favorable_tv"
            android:background="#d0d0d0" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="#e1e2e4" />
    </RelativeLayout>

    <third.mall.view.ViewPromotion
        android:id="@+id/view_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_shopping"
        android:background="#FEFEFE"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15" />

    <third.mall.widget.ListViewForScrollView
        android:id="@+id/listview_shopping"
        style="@style/listNoDivider"
        android:layout_below="@+id/view_promotion"
        android:background="#FEFEFE"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:visibility="gone" />
    <third.mall.view.MallShopProductAllView
        android:id="@+id/productallview" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_promotion"
        android:background="#fffffe"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/listview_money_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"
        android:layout_below="@+id/productallview"
        android:background="#FEFEFE"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15" >

        <TextView
            android:id="@+id/money_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_27"
            android:text="小计:"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/money_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/money_num"
            android:text="￥40.0"
            android:textColor="@color/comment_color"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

</RelativeLayout>