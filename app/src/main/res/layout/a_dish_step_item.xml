<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/a_dish_stem_item_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/itemImg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:minHeight="@dimen/dp_100"
            android:src="@drawable/i_nopic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/dish_step_gif_hint"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_22"
            android:layout_alignBottom="@+id/itemImg1" />

        <ImageView
            android:id="@+id/load_progress"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/image_progress"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/dish_fangda"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/itemText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:lineSpacingMultiplier="1"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_7"
        android:textSize="@dimen/sp_17" />
    <View
        android:id="@+id/step_distance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_21"
        android:background="@color/transparent"/>

</LinearLayout>