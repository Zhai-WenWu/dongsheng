<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:background="@color/transparent">

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e9e9e9"/>

    <LinearLayout
        android:id="@+id/time_tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_homeitem"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/time_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#ff533c"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_1"
            android:src="@drawable/time_tag_refresh"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/album_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:layout_below="@+id/time_tag_container"
        android:background="@color/transparent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="gone"/>

        <View
            android:id="@+id/layer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4c000000"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_34"
            android:gravity="center"
            android:background="@color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_white_text"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/transparent"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/dp_4"
                android:ellipsize="end"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/transparent"
                android:layout_marginTop="@dimen/dp_6">

                <TextView
                    android:id="@+id/top_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:background="@color/transparent"
                    android:textColor="@color/c_white_text"
                    android:text="置顶"
                    android:layout_marginRight="@dimen/dp_4"/>
                
                <View
                    android:id="@+id/dot"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_4"
                    android:background="@drawable/bg_dot"/>

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_white_text"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_below="@id/album_container"/>
</RelativeLayout>
