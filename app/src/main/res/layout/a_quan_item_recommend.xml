<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root_view_recommendFriend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_white3"
    android:orientation="vertical"
    android:visibility="gone" >
    
        <RelativeLayout
            android:id="@+id/recommendFriend_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="推荐好友"
                android:textColor="#000000"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_toLeftOf="@+id/z_quan_list_item_addfriend_more_iv"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_1"
                android:text="更多"
                android:textColor="@color/comment_color"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/z_quan_list_item_addfriend_more_iv"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/z_quan_list_item_qiangshafa_more" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#EFEFEF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_root_one"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_10" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10" >

                        <ImageView
                            android:id="@+id/iv_userImg_one"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@drawable/bg_round_zannum"
                            android:padding="@dimen/dp_1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_userType_one"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignBottom="@+id/iv_userImg_one"
                            android:layout_alignRight="@+id/iv_userImg_one"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/user_name_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tv_name_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_5"
                                android:ellipsize="end"
                                android:paddingRight="@dimen/dp_26"
                                android:singleLine="true"
                                android:text="名字"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_15" />

                            <ImageView
                                android:id="@+id/iv_lv_one"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_alignRight="@+id/tv_name_one"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_1"
                                android:background="@drawable/z_z_ico_level_01" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/iv_item_choose_one"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_23"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_white8"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="已关注"
                        android:textColor="#C9C9C9"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="#E6E6E6" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_root_two"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_10" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10" >

                        <ImageView
                            android:id="@+id/iv_userImg_two"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@drawable/bg_round_zannum"
                            android:padding="@dimen/dp_1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_userType_two"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignBottom="@+id/iv_userImg_two"
                            android:layout_alignRight="@+id/iv_userImg_two"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/user_name_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tv_name_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_5"
                                android:ellipsize="end"
                                android:paddingRight="@dimen/dp_26"
                                android:singleLine="true"
                                android:text="名字"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_15" />

                            <ImageView
                                android:id="@+id/iv_lv_two"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_alignRight="@+id/tv_name_two"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_1"
                                android:background="@drawable/z_z_ico_level_01" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/iv_item_choose_two"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_23"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_white8"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="已关注"
                        android:textColor="#C9C9C9"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="#E6E6E6" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_root_three"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_10" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10" >

                        <ImageView
                            android:id="@+id/iv_userImg_three"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:background="@drawable/bg_round_zannum"
                            android:padding="@dimen/dp_1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_userType_three"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignBottom="@+id/iv_userImg_three"
                            android:layout_alignRight="@+id/iv_userImg_three"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/user_name_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tv_name_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_5"
                                android:ellipsize="end"
                                android:paddingRight="@dimen/dp_26"
                                android:singleLine="true"
                                android:text="名字"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_15" />

                            <ImageView
                                android:id="@+id/iv_lv_three"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_alignRight="@+id/tv_name_three"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_1"
                                android:background="@drawable/z_z_ico_level_01" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/iv_item_choose_three"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_23"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_white8"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="已关注"
                        android:textColor="#C9C9C9"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="#E6E6E6"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>
