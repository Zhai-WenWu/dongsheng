<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dish_other_title"
        style="@style/d_uploadDishHeadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:text="其他" />
    
     <View
        android:id="@+id/dish_other_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="#DDDDDD" />
     
     <LinearLayout 
         android:id="@+id/dish_other_content"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"/>
     
     <TextView
         android:id="@+id/dish_other_exclusive_hint"
         style="@style/d_uploadDishHeadText"
         android:layout_marginTop="@dimen/dp_11"
         android:paddingLeft="@dimen/dp_15"
         android:paddingRight="@dimen/dp_15"
         android:textColor="#999999"
         android:textSize="@dimen/sp_13"
         android:text="注：独家上传表示此菜谱仅在香哈上传，审核为优质菜谱后可额外获得20积分，如有不实，直接封号"
         android:visibility="gone"/>

</LinearLayout>