<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_fake_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_76"
    android:background="@color/backgroup_color"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/a_home_main_item_nous_iv"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_9"
        android:scaleType="centerCrop"
        android:src="@drawable/i_nopic" />

    <TextView
        android:id="@+id/a_home_main_item_nous_title"
        style="@style/singleText"
        android:layout_marginTop="@dimen/dp_4.5"
        android:layout_toRightOf="@+id/a_home_main_item_nous_iv"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/a_home_main_item_nous_from"
        style="@style/singleText"
        android:layout_below="@+id/a_home_main_item_nous_title"
        android:layout_toLeftOf="@+id/ping_click_ll"
        android:layout_toRightOf="@+id/a_home_main_item_nous_iv"
        android:layout_marginTop="@dimen/dp_11"
        android:textColor="#A6A6A6"
        android:textSize="@dimen/sp_11" />

    <LinearLayout
        android:id="@+id/ping_click_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/a_home_main_item_nous_from"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/a_home_main_item_nous_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/a_home_main_item_nous_ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:ellipsize="end"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>

</RelativeLayout>