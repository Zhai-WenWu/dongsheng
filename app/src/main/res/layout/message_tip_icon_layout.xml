<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_57"
    android:layout_height="@dimen/dp_49">

    <ImageView
        android:id="@+id/iv_itemIsFine"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:scaleType="fitXY"
        android:src="@drawable/message_icon" />

    <TextView
        android:id="@+id/tv_tab_msg_num"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_above="@+id/iv_itemIsFine"
        android:layout_marginBottom="@dimen/dp__8"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@drawable/tv_circle_ff533c_20"
        android:gravity="center_horizontal|center_vertical"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_9"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_tab_msg_tow_num"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_above="@+id/iv_itemIsFine"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp__8"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@drawable/tv_circle_ff533c_20"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:text="12"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_9"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>