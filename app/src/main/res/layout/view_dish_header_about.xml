<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">

    <!--标题和收藏-->
    <RelativeLayout
        android:id="@+id/title_caipu_exp_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffe"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/caipu_exp_title_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caipu_exp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@drawable/bg_dish_yellow_1"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="独家"
                android:gravity="center"
                android:textColor="#fffffe"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/caipu_exp_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="加载中"
                android:textColor="#333333"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold" />
        </LinearLayout>
            <TextView
                android:id="@+id/caipu_exp_title_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:text="加载中"
                android:textColor="#333333"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/caipu_exp_title_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caipu_exp_title_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:text="加载中"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>
    <!--用户信息-->
    <RelativeLayout
        android:id="@+id/caipu_exp_user_rela"
        android:layout_below="@+id/title_caipu_exp_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffe"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <View
            android:id="@+id/line_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#ececec" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_user"
            android:paddingBottom="@dimen/dp_19"
            android:paddingTop="@dimen/dp_21">

            <ImageView
                android:id="@+id/auther_userImg"
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_round_grey_e0e0e0_50" />

            <ImageView
                android:id="@+id/cusType"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignBottom="@+id/auther_userImg"
                android:layout_alignRight="@+id/auther_userImg"
                android:clickable="true"
                android:src="@drawable/z_user_gourmet_ico"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/auther_userImg"
                android:layout_marginLeft="@dimen/dp_12"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/caipu_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/caipu_user_name"
                        style="@style/singleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/dp_170"
                        android:gravity="right"
                        android:textColor="#333333"
                        android:text="加载中"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/caipu_user_vip"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/caipu_user_name"
                        android:gravity="center" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/caipu_user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/caipu_user"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="加载中"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caipu_follow_rela"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_23"
                android:background="@drawable/bg_circle_follow_5">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/caipu_follow_img"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dish_follow_a"/>
                    <TextView
                        android:id="@+id/caipu_follow_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginLeft="@dimen/dp_1.5"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/comment_color"
                        android:text="关注"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!--心得和其他-->
    <RelativeLayout
        android:id="@+id/caipu_work_exp_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffe"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_below="@+id/caipu_exp_user_rela"
        android:layout_marginTop="@dimen/dp_11"
        android:paddingTop="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/caipu_work_exp_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_4"
            android:text="加载中"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16" />


    </RelativeLayout>

</RelativeLayout>