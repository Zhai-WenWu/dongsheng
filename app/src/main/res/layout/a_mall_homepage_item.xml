<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15" >

    <RelativeLayout
        android:id="@+id/mall_item_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/mall_item_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:contentDescription="@string/conf_appName" />

        <View
            android:id="@+id/view_backgroup_item" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#bbffffff"/>
        <RelativeLayout
            android:id="@+id/mall_item_state_rela"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_centerInParent="true"
            android:background="@drawable/mall_home_item_state" >

            <RelativeLayout
                android:id="@+id/mall_item_state_rela_item"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:layout_centerInParent="true"
                android:background="@drawable/mall_home_item_line" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_20"
                        android:background="@drawable/mall_item_state_iv" />

                    <TextView
                        android:id="@+id/mall_item_state_rela_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="剩1000件"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/mall_item_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_item_rela"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_5"
        android:maxLines="2"
        android:textColor="#676767"
        android:text="小明滚滚出去，小明滚滚出去小明滚滚出去小明滚滚出去小明滚滚出去小明滚滚出去小明滚滚出去小明滚滚出去"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:id="@+id/mall_item_tv_commod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_item_tv_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mall_item_tv_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.0元"
                android:textColor="#E62323"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/mall_item_tv_before_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="bottom"
                android:text="10.0元"
                android:textColor="#8a8f97"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/mall_item_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="仅剩93件"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/mall_item_tv_commod" 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_27"></RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#e1e2e4" />

</RelativeLayout>