<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sb_header_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#fefefe"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

    <amodule.quan.view.SubjectHeaderFromCircle
        android:id="@+id/rela_circle_from"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/common_bg"
        />

    <amodule.quan.view.SubjectHeaderUser
        android:id="@+id/subject_header_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_18" />

    <amodule.quan.view.SubjectHeaderTitle
        android:id="@+id/sb_header_tv_title_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <amodule.quan.view.SubjectHeaderVideoLayout
        android:id="@+id/sb_header_video_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/sb_header_linear_body_imgs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15" />

    <amodule.quan.view.SubjectHeaderAddress
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_header_tv_content"
        android:layout_marginTop="@dimen/dp_10" />

    <amodule.quan.view.SubjectHeaderMore
        android:id="@+id/subject_header_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <amodule.quan.view.SubjectHeaderBottom
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_11"
        android:background="@color/common_bg"/>

    <RelativeLayout
        android:id="@+id/a_subject_detail_ad_bd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/a_subject_detail_ad_banner_bd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/a_subject_detail_ad_banner_tencent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/a_subject_detail_ad"
        layout="@layout/ad_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>