<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_6">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_89"
        android:background="@drawable/i_nopic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/image">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/common_text"
            android:textSize="@dimen/sp_16"
            tools:text="不节食就能瘦 风靡全球的5:2轻断食"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="@dimen/dp_3"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/common_super_tint_text"
            android:textSize="@dimen/sp_13"
            tools:text="30天瘦身计划30天瘦身计划30天瘦身计划30天瘦身计划30天瘦身计划30天瘦身计划"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:textColor="@color/common_super_tint_text"
            android:textSize="@dimen/sp_13"
            tools:text="18节课  968人已完成学习"/>

    </RelativeLayout>

</RelativeLayout>