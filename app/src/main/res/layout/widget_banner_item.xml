<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@id/icon_ad_gdt"
        android:src="@drawable/icon_ad_gdt"
        android:layout_alignBottom="@+id/image"
        android:layout_alignRight="@+id/image"
        android:visibility="gone"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_13.5" />

    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_alignParentBottom="true"
        android:background="@drawable/banner_shadow"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_28"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_14"
                android:text="这一个广告测试的title，所以所以所以所以所以请忽略这句话"
                tools:text="这一个广告测试的title，所以所以所以所以所以请忽略这句话"
                />

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/title"
                android:src="@drawable/banner_ad_icon"
                android:visibility="gone"/>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>