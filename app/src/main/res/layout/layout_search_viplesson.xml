<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/lesson_back_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/search_vip_lesson_bg"/>

    <ImageView
        android:id="@+id/lesson_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@drawable/i_nopic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/lesson_play_img"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        app:layout_constraintTop_toTopOf="@+id/lesson_img"
        app:layout_constraintBottom_toBottomOf="@+id/lesson_img"
        app:layout_constraintStart_toStartOf="@+id/lesson_img"
        app:layout_constraintEnd_toEndOf="@+id/lesson_img"
        android:src="@drawable/play_video"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:textColor="@color/c_white_text"
        app:layout_constraintStart_toEndOf="@+id/lesson_img"
        app:layout_constraintTop_toTopOf="@+id/lesson_img"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>

    <TextView
        android:id="@+id/lesson_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_white_text"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/lesson_img"
        app:layout_constraintTop_toBottomOf="@+id/lesson_title"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>

    <TextView
        android:id="@+id/lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_white_text"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/lesson_img"
        app:layout_constraintTop_toBottomOf="@+id/lesson_info"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>

    <Button
        android:id="@+id/lesson_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_29"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_white_text"
        android:text="立即播放"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_round_corners6_f23030"
        app:layout_constraintStart_toEndOf="@+id/lesson_img"
        app:layout_constraintTop_toBottomOf="@+id/lesson_name"
        app:layout_constraintBottom_toBottomOf="@id/lesson_img"
        android:layout_marginLeft="@dimen/dp_15"/>

</android.support.constraint.ConstraintLayout>