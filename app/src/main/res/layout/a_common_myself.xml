<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityLayout"
    style="@style/layout"
    android:clickable="false">

    <ScrollView
        android:id="@+id/scrollview_myself"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_38">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/myself_ll_tab"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_top_bg"/>

                <View
                    android:id="@+id/my_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <RelativeLayout
                    android:id="@+id/rl_userPage"
                    android:layout_below="@+id/my_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_106"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/myself_iv"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_56"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/bg_user_round80_fff"
                        android:clickable="false"
                        android:padding="@dimen/dp_1"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        />

                    <ImageView
                        android:id="@+id/iv_userType"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_alignBottom="@+id/myself_iv"
                        android:layout_alignRight="@+id/myself_iv"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_2"
                        android:background="@drawable/z_user_gourmet_ico"
                        android:visibility="invisible"/>

                    <RelativeLayout
                        android:id="@+id/right_myself"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginRight="@dimen/dp_33"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_toLeftOf="@+id/ico_right_myself"
                        android:layout_toRightOf="@+id/myself_iv"
                        android:clickable="false"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/ll_myself"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/myself_name"
                                style="@style/singleText"
                                android:layout_width="wrap_content"
                                android:clickable="false"
                                android:maxWidth="@dimen/dp_145"
                                android:textColor="@color/common_top_text"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                />

                            <ImageView
                                android:id="@+id/myself_lv"
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp__1"
                                android:clickable="true"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp_3"
                                android:paddingLeft="@dimen/dp_3"
                                android:paddingTop="@dimen/dp_3"/>

                            <ImageView
                                android:id="@+id/a_user_home_title_vip"
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp__1"
                                android:padding="@dimen/dp_3"
                                android:scaleType="fitCenter"/>

                        </LinearLayout>

                        <acore.widget.TagTextView
                            android:id="@+id/my_vip"
                            android:layout_width="@dimen/dp_76"
                            android:layout_height="@dimen/dp_22"
                            android:layout_below="@+id/ll_myself"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dp_1"
                            android:paddingLeft="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_9"
                            android:paddingTop="@dimen/dp_1"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sp_12"
                            app:backgroundColor="@android:color/transparent"
                            app:radius="@dimen/dp_3"
                            app:sideColor="#FFFFFF"
                            app:sideWidth="1px"
                            android:visibility="gone"
                            />
                        <acore.widget.TagTextView
                            android:id="@+id/my_renzheng"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_22"
                            android:layout_below="@+id/ll_myself"
                            android:layout_toRightOf="@+id/my_vip"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dp_1"
                            android:paddingLeft="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_9"
                            android:paddingTop="@dimen/dp_1"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sp_12"
                            app:backgroundColor="@android:color/transparent"
                            app:radius="@dimen/dp_3"
                            app:sideColor="#FFFFFF"
                            app:sideWidth="1px"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/myself_please_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_107"
                        android:text="请登录/注册"
                        android:textColor="@color/common_top_text"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ico_right_myself"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:clickable="false"
                        android:src="@drawable/z_find_home_ico_go"/>

                    <TextView
                        android:id="@+id/goManagerInfo"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="0dp"
                        android:clickable="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/myself_ll_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_userPage"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_12">

                    <LinearLayout
                        android:id="@+id/ll_subject"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/my_subject"
                            style="@style/myTabTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>

                        <TextView
                            style="@style/myTabText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美食贴"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dish"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/my_dish"
                            style="@style/myTabTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>

                        <TextView
                            style="@style/myTabText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="菜谱"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_flow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/my_flow"
                            style="@style/myTabTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>

                        <TextView
                            style="@style/myTabText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_63"
                    android:layout_below="@+id/myself_ll_tab"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <LinearLayout
                        android:id="@+id/ll_money"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/myTab2Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱包(香包)"/>
                        <TextView
                            android:id="@+id/my_money"
                            style="@style/myTab2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_score"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/myTab2Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分"/>
                        <TextView
                            android:id="@+id/my_score"
                            style="@style/myTab2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_coupon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/myTab2Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券(张)"/>
                        <TextView
                            android:id="@+id/my_coupon"
                            style="@style/myTab2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/myself_gourp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:background="#fff"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/myself_gourp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:background="#fff"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/myself_gourp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:background="#fff"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>