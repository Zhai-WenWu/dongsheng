<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_nous_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroup_color"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/itemImg2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:background="#EAE5DB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_nocolor"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10" >

         <ImageView
            android:id="@+id/iv_nousCover"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_65"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="fitCenter"
            android:src="@drawable/i_nopic" />

        <TextView
            android:id="@+id/tv_nousTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:paddingLeft="@dimen/dp_10"
            android:layout_alignTop="@+id/iv_nousCover"
            android:layout_toLeftOf="@+id/iv_nousCover"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Large Text"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

</LinearLayout>