<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/product_recomend_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_37"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15" >

        <RelativeLayout
            android:id="@+id/text_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_centerVertical="true"
                android:background="#e1e2e4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="你可能喜欢"
                android:textColor="#a0a0a0"
                android:background="#f7f7f7"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>
        <third.mall.widget.MyGridView
            android:id="@+id/gridview"
            android:layout_below="@+id/text_rela" 
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:scrollbars="none"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:verticalSpacing="@dimen/dp_11"
            android:horizontalSpacing="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_40"
            />
    </RelativeLayout>

</RelativeLayout>
