<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    android:layout_width="match_parent"
    android:background="@color/ysf_black_333333"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/black"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <!--头部内容-->
                <amodule.topic.view.TopicHeaderView
                    android:id="@+id/view_topic_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_scrollFlags="scroll" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:id="@+id/title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/topbar_height">

                        <ImageView
                            android:id="@+id/back_img"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:padding="@dimen/dp_5"
                            android:scaleType="centerInside"
                            android:src="@drawable/calssify_health_back" />

                        <LinearLayout
                            android:id="@+id/title_container"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/empty_title"
                            android:layout_toRightOf="@+id/back_img"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_17"
                                android:layout_height="@dimen/dp_17"
                                android:src="@drawable/icon_topic" />

                            <TextView
                                android:id="@+id/title"
                                style="@style/top_title_singleText"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="@dimen/dp_3"
                                android:clickable="true"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <View
                            android:id="@+id/empty_title"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_15" />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hot_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="最热"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:id="@+id/view_hot_tab_bottom"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@drawable/bg_round9_fa273b" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_new"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_new_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="最新"
                        android:textColor="@color/c_777777"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:id="@+id/view_new_tab_bottom"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@drawable/bg_round9_fa273b"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>
            <!--顶部tab悬浮去掉此属性，enterAlways任何地方下拉展示tab，snap要么完全显示要么完全隐藏-->


        </android.support.design.widget.AppBarLayout>

        <!--fillViewport属性不写可能会造成NestedScrollView撑不开造成ViewPager无法显示-->

        <acore.widget.rvlistview.RvStaggeredGridView
            android:id="@+id/staggered_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:spanCount="3" />


        <ImageView
            android:id="@+id/floating_btn"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/dp_60"
            android:visibility="invisible"
            android:scaleType="fitXY"
            android:src="@drawable/img_joinin"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />

    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>