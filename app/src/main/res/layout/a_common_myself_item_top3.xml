<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe" >
    
    <ImageView
        android:id="@+id/my_tab3_icon" 
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:visibility="gone"/>
    
    <View
        android:id="@+id/my_tab3_icon_hind_margin" 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:layout_below="@+id/my_tab3_icon"
        android:visibility="gone"/>
    
    <TextView 
        android:id="@+id/my_tab3_tv"
        style="@style/mySelfTop3"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_tab3_icon_hind_margin"
        android:paddingTop="@dimen/dp_11"
        android:paddingBottom="@dimen/dp_16"
        android:gravity="center"
        android:visibility="gone"/>
    
    <ImageView 
        android:id="@+id/my_tab3_img_lef_bto"
        android:layout_width="@dimen/dp_29"
        android:layout_height="@dimen/dp_14"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/i_icon_my_tuijian"
        android:visibility="gone"
        android:gravity="center"/>
    
    <TextView
        android:id="@+id/my_top3_msg_num"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@+id/my_tab3_icon_hind_margin"
        android:layout_toRightOf="@+id/my_tab3_tv"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_4.5"
        android:paddingRight="@dimen/dp_4.5"
        android:minWidth="@dimen/dp_16"
        android:background="@drawable/tv_circle_red_20"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_10"
        android:visibility="gone" />
    
    <TextView
       android:id="@+id/my_top3_msg_hint"
       android:layout_width="@dimen/dp_6"
       android:layout_height="@dimen/dp_6"
       android:layout_below="@+id/my_tab3_icon_hind_margin"
       android:background="@drawable/tv_circle_red_20"
       android:layout_toRightOf="@+id/my_tab3_tv"
       android:layout_marginTop="@dimen/dp_7"
       android:gravity="center"
       android:textColor="#FFFFFF"
       android:textSize="@dimen/dp_9" 
       android:visibility="gone"/>
    
    <View 
        android:id="@+id/my_tab2_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentTop="true"
        android:background="#dfdfdf"/>

</RelativeLayout>
