<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <acore.widget.DownRefreshList
        style="@style/listView"
        android:id="@+id/comment_listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:divider="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/commend_hind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_213"
        android:gravity="center"
        android:text="暂无评论，抢沙发~"
        android:textColor="#333"
        android:textSize="@dimen/sp_15"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        >
        
        <ImageView
            android:id="@+id/commend_write_pen"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_11"
            android:src="@drawable/i_comment_pen"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/commend_write_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:layout_toLeftOf="@+id/comment_send_parent"
            android:background="@drawable/bg_round40_dbdbdb"
            android:paddingLeft="@dimen/dp_28"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:gravity="center_vertical"
            android:hint="写评论"
            />

        <LinearLayout
            android:id="@+id/comment_send_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >
           <TextView
                android:id="@+id/comment_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_13"
                android:gravity="center"
                android:text="发送"
                android:visibility="gone"
                />

            <ProgressBar
                android:id="@+id/comment_send_progress"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp_13"
                android:visibility="gone"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>