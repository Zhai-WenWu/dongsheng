<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/a_dish_detail_new_tieshi_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:id="@+id/a_dish_detail_new_line1"
        style="@style/lineView"
        android:layout_below="@+id/a_dish_detail_new_tieshi_ad" />

    <RelativeLayout
        android:id="@+id/a_dish_detail_new_xiangguan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a_dish_detail_new_line1"
        android:padding="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/a_dish_detail_new_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/a_dish_detail_new_tv_num"
            android:layout_centerVertical="true"
            android:text="哈友相关作品"
            android:textColor="#333"
            android:textSize="@dimen/sp_17"
            />

        <TextView
            android:id="@+id/a_dish_detail_new_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/a_dish_detail_new_imgview"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_4"
            android:text="120道"
            android:textColor="#999"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:id="@+id/a_dish_detail_new_imgview"
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/a_login_setting_button_enter" />
    </RelativeLayout>

    <View
        android:id="@+id/a_dish_detail_new_line2"
        style="@style/lineView"
        android:layout_below="@+id/a_dish_detail_new_xiangguan"/>

    <TextView
        android:id="@+id/a_dish_detail_new_relevantTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/a_dish_detail_new_line2"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_round_red_type2"
        android:gravity="center"
        android:text="相关作品"
        android:textColor="#fff" />

</RelativeLayout>