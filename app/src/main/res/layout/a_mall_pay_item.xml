<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffffe"
    android:paddingBottom="@dimen/dp_15"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pay_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" >

        <TextView
            style="@style/singleText"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_15"
            android:text="选择支付方式"
            android:textColor="#777777"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/pay_type_wechat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/pay_type"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/pay_type_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/pay_type_iv_wx_iv"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            style="@style/singleText"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/pay_type_iv"
            android:text="微信支付"
            android:textColor="#777777"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/pay_wechat"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/z_mall_shopcat_no_choose" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="#e1e2e4" />
    </RelativeLayout>

      <RelativeLayout
        android:id="@+id/pay_type_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/pay_type_wechat"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/wechat_type_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/pay_type_iv_alipay_iv"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            style="@style/singleText"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/wechat_type_iv"
            android:text="支付宝支付"
            android:textColor="#777777"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/pay_alipay"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/z_mall_shopcat_no_choose"
            />

    </RelativeLayout>
</RelativeLayout>