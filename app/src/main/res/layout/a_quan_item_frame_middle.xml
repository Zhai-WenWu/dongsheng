<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_imgs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/quan_iv_img_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/i_nopic"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_imgs_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <acore.widget.ImageViewVideo
                android:id="@+id/quan_iv_img_video"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/i_nopic"
                android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/imgs_ll"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_imgs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/quan_iv_img_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/i_nopic"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/imgs_ll2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>

            <ImageView
                android:id="@+id/quan_iv_img_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/i_nopic"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <acore.widget.TextViewShow
        android:id="@+id/tv_item_sub_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:lineSpacingExtra="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_7"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/dp_7"
        android:textColor="#707070"
        android:textSize="@dimen/sp_13" >
    </acore.widget.TextViewShow>

    <ImageView
        android:id="@+id/iv_show_no_content"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#EEEDED" />

    <RelativeLayout
        android:id="@+id/linear_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/item_author_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/quan_tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_11"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_11"
                android:text="时间"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/sp_11" />

            <acore.widget.TextViewShow
                android:id="@+id/tv_item_author"
                style="@style/singleText"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/dp_110"
                android:padding="@dimen/dp_10"
                android:text="作者"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/sp_11" >
            </acore.widget.TextViewShow>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_location_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_author_ll"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/my_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="我的位置"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_ping"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/linear_zan"
            android:orientation="horizontal"
            android:padding="@dimen/dp_11" >

            <ImageButton
                android:id="@+id/iv_item_pinglun"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:background="@drawable/i_ico_comm_new"
                android:clickable="false" />

            <TextView
                android:id="@+id/quan_tv_item_ping"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_2"
                android:clickable="false"
                android:text="评"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_11"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="0dp"
            android:paddingTop="@dimen/dp_11" >

            <ImageButton
                android:id="@+id/iv_item_zan"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:background="@drawable/z_quan_home_body_ico_good"
                android:clickable="false"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/quan_tv_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:clickable="false"
                android:text="赞"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>