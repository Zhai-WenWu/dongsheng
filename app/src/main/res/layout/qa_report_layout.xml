<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout"
    android:clickable="false">

    <acore.widget.MsgScrollView
        android:id="@+id/report_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/barTitle"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:paddingLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="请选择原因"
                android:textColor="#999999"/>

            <LinearLayout
                android:id="@+id/report_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_white_text"
                android:orientation="vertical">
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/blacklist_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#FFFFFF"
                android:visibility="gone">

                <TextView
                    android:id="@+id/blacklist_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="加入黑名单"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    />

                <acore.widget.SwitchButton
                    android:id="@+id/blacklist_switchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/admin_report_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:text="特别权限"
                android:textColor="#999999"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/admin_report_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">
            </LinearLayout>

            <Button
                android:id="@+id/report_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_btn_report_quan"
                android:gravity="center"
                android:text="提交"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </acore.widget.MsgScrollView>
</RelativeLayout>