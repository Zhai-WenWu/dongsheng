<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFE">

    <View
        android:id="@+id/commend_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/common_bg" />

    <TextView
        android:id="@+id/dish_commend_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commend_line"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="相关推荐"
        android:textColor="#333333"
        android:textSize="@dimen/dp_18"/>

    <RelativeLayout
        android:id="@+id/rl_caipu"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dish_commend_tv"
        android:padding="@dimen/dp_15">

        <acore.widget.ImageViewVideo
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/i_nopic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_icon"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:lines="1"
                    android:maxWidth="@dimen/dp_150"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6.5"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#333333"
                android:textSize="@dimen/sp_11"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#b3b3b3"
                    android:textSize="@dimen/sp_10"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_observed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_11"/>

                <TextView
                    android:id="@+id/tv_collected"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/a_home_main_ad_layout_nouse_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_caipu"
        android:background="#FEFEFE"/>

    <LinearLayout
        android:id="@+id/line_huaise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@+id/dish_commend_tv"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#ececec"/>
    </LinearLayout>
</RelativeLayout>