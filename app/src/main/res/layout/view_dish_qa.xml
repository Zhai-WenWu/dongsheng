<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/qa_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#f2f2f2"
        android:visibility="visible"/>
    <RelativeLayout
        android:id="@+id/qa_user_rela"
        android:layout_below="@+id/qa_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/auther_userImg"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_round_grey_e0e0e0_50" />

        <ImageView
            android:id="@+id/cusType"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignBottom="@+id/auther_userImg"
            android:layout_alignRight="@+id/auther_userImg"
            android:clickable="true"
            android:src="@drawable/z_user_gourmet_ico"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/auther_userImg"
            android:layout_alignTop="@+id/auther_userImg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/auther_userImg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="加载中"
                android:textColor="#333333"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/bg_dish_white"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:text="作者"
                android:textColor="#666666"
                android:textSize="@dimen/dp_10" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/qa_user_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qa_user_rela"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已问答 "
                android:textColor="#999999"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:id="@+id/text_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff553c"
                android:text="22"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满意度 "
                android:textColor="#999999"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:id="@+id/text_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff553c"
                android:text="9.4%"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价响应时间 "
                android:textColor="#999999"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时"
                android:maxLines="1"
                android:textColor="#ff553c"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qa_content_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qa_user_explain"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/qa_more_linaer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qa_content_linear"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_dish_e6"
            android:gravity="center"
            android:text="查看更多问答"
            android:textColor="#333333"
            android:textSize="@dimen/dp_15" />

    </LinearLayout>
</RelativeLayout>