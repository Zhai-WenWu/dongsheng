<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#99000000"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/video_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/replay_img"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_centerHorizontal="true"
            android:src="@drawable/play_img"/>
        <TextView
            android:id="@+id/replay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/replay_img"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:text="重播"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_white_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_65">

        <ImageView
            android:id="@+id/share_img"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_item_video_share"/>
        <TextView
            android:id="@+id/share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_img"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:text="分享"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_white_text"/>
    </RelativeLayout>

</LinearLayout>
