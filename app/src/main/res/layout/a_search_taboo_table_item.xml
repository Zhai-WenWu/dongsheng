<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_nocolor"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_6.5"
    android:paddingTop="@dimen/dp_6.5" >

    <TextView
        android:id="@+id/item_search_taboo_type"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_round_green_type1"
        android:gravity="center"
        android:text="宜搭"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/item_search_taboo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:text="宜搭"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/item_search_taboo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:singleLine="true"
        android:text="宜搭"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14" />

</LinearLayout>