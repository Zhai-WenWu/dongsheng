<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/quan_bar_subject_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/quan_bar_ll_emojiBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#F9F9F9" >

                <ImageButton
                    android:id="@+id/quan_bar_ib_addEmoji"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_nocolor"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_9"
                    android:scaleType="centerInside"
                    android:src="@drawable/z_quan_tie_menu_ico_face" />

                <ImageButton
                    android:id="@+id/quan_bar_ib_addFrend"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_nocolor"
                    android:paddingLeft="@dimen/dp_9"
                    android:paddingRight="@dimen/dp_9"
                    android:scaleType="centerInside"
                    android:src="@drawable/z_quan_tie_menu_ico_to" />
                
                <ImageButton
                    android:id="@+id/ib_addImg"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_nocolor"
                    android:paddingLeft="@dimen/dp_9"
                    android:paddingRight="@dimen/dp_9"
                    android:scaleType="centerInside"
                    android:src="@drawable/z_quan_tie_menu_ico_camera_comment" />
                
                <ImageButton
                    android:id="@+id/ib_seting"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_nocolor"
                    android:paddingLeft="@dimen/dp_9"
                    android:paddingRight="@dimen/dp_9"
                    android:scaleType="centerInside"
                    android:src="@drawable/z_quan_tie_menu_ico_camera_seting"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/quan_bar_rl_emoji"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_170"
                android:visibility="gone">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/quan_bar_rl_seting"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_115"
                android:paddingLeft="@dimen/dp_15" 
                android:paddingRight="@dimen/dp_15" 
                android:background="@color/comment_back_color"
                android:visibility="gone">
                <View
                    android:id="@+id/a_quan_upload_line" 
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#E0E0E0"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a_quan_upload_line"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15"
                    android:text="图片水印"/>
                
                <ImageView
                    android:id="@+id/quan_bar_switch_button_setting"
                    android:layout_width="@dimen/dp_49"
                    android:layout_height="@dimen/dp_27"
                    android:layout_below="@+id/a_quan_upload_line"
                    android:src="@drawable/z_quan_tie_menu_ico_camera_switch_ok"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>