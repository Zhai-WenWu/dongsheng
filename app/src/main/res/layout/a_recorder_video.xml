<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/a_video_recorder_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="@dimen/dp_107"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <View
            android:id="@+id/a_video_recorder_right_layout_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000" />

        <ImageView
            android:id="@+id/a_video_recorder_switcher"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_centerHorizontal="true"
            android:background="@drawable/i_dish_video_cammer"
            android:scaleType="centerInside"
            android:button="@null"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/a_video_recorder_action"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_67"
            android:layout_centerInParent="true"
            android:background="@drawable/dish_recorder_action_selector"
            android:button="@null"
            />

        <ImageView
            android:id="@+id/a_video_recorder_play_ce"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_19"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/a_video_recorder_photo"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/dish_recorder_photo_selector"
            android:button="@null"
            android:visibility="gone"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_3"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_round_recorder_title"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/a_video_recorder_led"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_54"
            android:background="@drawable/dish_record_flash_led_selector"
            android:button="@null"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/a_video_recorder_action_point"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_19"
            android:background="@drawable/bg_round_red20"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/a_video_recorder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_28"
            android:textSize="@dimen/sp_19"
            android:textColor="#fefefe"
            android:text="00:00"/>

        <View
            android:id="@+id/a_video_recorder_time_margin_view"
            android:layout_width="@dimen/dp_72"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/a_video_recorder_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_19"
        android:paddingTop="@dimen/dp_14"
        android:paddingRight="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_3"
        android:textSize="@dimen/sp_17"
        android:textColor="#fff"
        android:text="取消"/>


    <TextView
        android:id="@+id/a_video_recorder_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/dp_45"
        android:textColor="#fefefe"/>


</RelativeLayout>
