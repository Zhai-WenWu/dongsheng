<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#e9e9e9"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_top">

        <View
            android:id="@+id/recommend_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f7f7f7"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/recommend_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommend_line"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_23"
            android:paddingBottom="@dimen/dp_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/dp_8"
                android:layout_height="0.5dp"
                android:background="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="往期推荐"
                android:textSize="@dimen/sp_13"/>

            <View
                android:layout_width="@dimen/dp_8"
                android:layout_height="0.5dp"
                android:background="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_tag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_round_homeitem"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/time_tag"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#ff533c"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_1"
                android:src="@drawable/time_tag_refresh"
                android:scaleType="centerInside"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:layout_below="@+id/top_container"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_7"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/play_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerInParent="true"
            android:src="@drawable/home_item_play"
            android:background="@color/transparent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/video_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:gravity="center"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_2.5"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            android:textColor="@color/c_white_text"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <View
            android:id="@+id/layer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#19ffffff"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_sole"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/icon_sole"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

        <ImageView
            android:id="@+id/resume_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerInParent="true"
            android:src="@drawable/home_item_play"
            android:background="@color/transparent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ad_tag"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_16.5"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/home_item_adtag_black"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_alignParentLeft="true"
        android:lineSpacingExtra="@dimen/dp_4"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/c_black_text"
        android:textSize="@dimen/sp_17"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_13"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/top_tag"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@drawable/top"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/name_gourmet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp_14"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_0.5"
                android:layout_marginRight="@dimen/dp_1"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="#b5b4b4"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/gourmet_icon"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:src="@drawable/home_item_gourmet_icon"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_0.5"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#b5b4b4"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_0.5"
            android:textColor="#b5b4b4"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_below="@id/user_container"/>
</RelativeLayout>
