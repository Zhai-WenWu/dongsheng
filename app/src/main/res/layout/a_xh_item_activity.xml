<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10" >

    <RelativeLayout
        android:id="@+id/activity_item_relativeLaout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroup_color" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/dp_10"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/i_nopic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/activity_PV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_labelView"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>