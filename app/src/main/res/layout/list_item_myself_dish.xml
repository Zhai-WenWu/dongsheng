<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mydish"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
                android:src="@drawable/i_nopic"/>

            <LinearLayout
                android:id="@+id/mydish_linear_right_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/singleText"
                        android:layout_width="wrap_content"
                        android:maxLength="10"
                        android:text="糖醋排骨"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_16"/>

                    <acore.widget.TagTextView
                        android:id="@+id/tv_makeImg"
                        style="@style/singleText"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        android:paddingTop="@dimen/dp_2"
                        android:text="步骤图"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_11"
                        app:backgroundColor="#E9E9E9"
                        app:radius="@dimen/dp_2"/>

                    <acore.widget.TagTextView
                        app:backgroundColor="@color/comment_color"
                        app:radius="@dimen/dp_2"
                        android:id="@+id/tv_isFine"
                        style="@style/singleText"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:padding="@dimen/dp_2"
                        android:text="精"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/tv_isUp"
                        style="@style/singleText"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:background="@drawable/round_red2"
                        android:padding="@dimen/dp_3"
                        android:text="发布中"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/singleText"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="煮面,生姜,土豆,葱,蒜"
                    android:textColor="#999"
                    android:textSize="@dimen/sp_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_look"
                        style="@style/singleText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="100浏览"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/tv_collect"
                        style="@style/singleText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:text="100收藏"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/tv_bianji"
                        style="@style/singleText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="管理员锁定"
                        android:textColor="#999"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#d9d9d9"/>

</LinearLayout>