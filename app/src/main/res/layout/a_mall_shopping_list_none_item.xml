<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15" >

    <RelativeLayout
        android:id="@+id/shop_none_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_89"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12" >

        <acore.widget.TagTextView
            xmlns:tagTextView="http://schemas.android.com/apk/res-auto"
            tagTextView:radius="@dimen/dp_2"
            tagTextView:backgroundColor="#999999"
            android:id="@+id/shop_none_tv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center"
            android:text="失效"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/shop_none_iv"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_toRightOf="@+id/shop_none_tv"
            android:background="#ff9b9b" />

        <TextView
            android:id="@+id/shop_none_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@+id/shop_none_iv"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_4"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/shop_none_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_none_text"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toLeftOf="@+id/product_num_rela"
            android:layout_toRightOf="@+id/shop_none_iv"
            android:textColor="#8a8f97"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/product_num_rela"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/shop_none_data"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/shop_none_data"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:layout_gravity="center_vertical"
                android:textColor="#8a8f97"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8a8f97"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>