<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffffe"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15" >

    <LinearLayout
        android:id="@+id/ll_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/quan_iv_img_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/i_nopic"
            android:visibility="gone" />

        <acore.widget.ImageViewVideo
            android:id="@+id/quan_item_model_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/imgs_ll"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_imgs2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/quan_iv_img_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/i_nopic"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/imgs_ll2"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone" >
            </RelativeLayout>

            <ImageView
                android:id="@+id/quan_iv_img_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/i_nopic"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>