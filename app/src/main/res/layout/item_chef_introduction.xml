<?xml version="1.0" encoding="utf-8"?>
<acore.widget.rcwidget.RCConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staggered_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_170"
    android:background="@drawable/bg_home_content_shadow"
    app:round_corner="@dimen/dp_5">

    <acore.widget.rcwidget.RCImageView
        android:id="@+id/chef_image"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/i_nopic"
        app:clip_background="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round_as_circle="true"/>

    <TextView
        android:id="@+id/chef_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="飯就行"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/chef_image"
        app:layout_constraintLeft_toRightOf="@id/chef_image"
        app:layout_constraintTop_toTopOf="@id/chef_image"/>

    <acore.widget.TagTextView
        android:id="@+id/chef_tag"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="名厨"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_12"
        app:radius="@dimen/dp_2"
        app:backgroundColor="#EBB54E"
        app:layout_constraintBottom_toBottomOf="@id/chef_name"
        app:layout_constraintLeft_toRightOf="@id/chef_name"
        app:layout_constraintTop_toTopOf="@id/chef_name"/>

    <TextView
        android:id="@+id/chef_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="专注于西餐料理研究。从事西餐工作10余年。致力于研发和创新各类菜肴和点心，丰富授课技术，教授出一大批可自主从业的优秀人员。擅长教学：西式面点、中式点心、西式料理、…"
        android:textColor="#3E3E3E"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chef_image"/>


</acore.widget.rcwidget.RCConstraintLayout>