<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activityLayout"
                style="@style/layout"
                android:background="@color/backgroup_color"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">

    <RelativeLayout android:id="@+id/rl_topbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">
        <ImageView android:id="@+id/top_left_view"
                   android:layout_width="@dimen/dp_10"
                   android:layout_height="@dimen/dp_15"
                   android:layout_centerVertical="true"
                   android:layout_marginTop="@dimen/dp_15"
                   android:background="@drawable/a_login_button_return"/>


    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_below="@+id/rl_topbar"
                  android:layout_marginTop="@dimen/dp_46"
                  android:paddingLeft="@dimen/dp_20"
                  android:paddingRight="@dimen/dp_20"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_secret_title"
                      android:gravity="center"
                      android:text="请设置密码"
                      android:textStyle="bold"
                      android:textColor="@color/c_black_text"
                      android:textSize="@dimen/sp_26"/>
            <TextView
                android:id="@+id/tv_identify_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:textColor="@color/c_black_text"
                android:textSize="@dimen/sp_14"
                android:visibility="invisible"/>


        </LinearLayout>

        <amodule.user.view.SecretInputView
            android:id="@+id/user_set_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_53"/>


        <amodule.user.view.NextStepView
            android:id="@+id/btn_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_43"
        />

    </LinearLayout>

</RelativeLayout>