<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_shicai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_10"
            android:src="@drawable/icon_serach_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <acore.widget.rcwidget.RCImageView
            android:id="@+id/iv_shicaiCover"
            app:round_as_circle="true"
            app:clip_background="true"
            app:round_corner="@dimen/dp_20"
            app:stroke_color="#F4F4F4"
            app:stroke_width="1px"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/i_nopic"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_shicaiCover"
            android:clickable="false"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shicai_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                tools:text="土豆"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:text="功效与营养价值"
                android:textColor="#FF666666"
                android:textSize="@dimen/dp_12"
                />

            <TextView
                android:id="@+id/iv_shicai_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="/相宜相克"
                android:textColor="#FF666666"
                android:textSize="@dimen/dp_12"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

