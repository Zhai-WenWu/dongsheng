<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_shicai"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_105"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dp_15">


        <ImageView
            android:id="@+id/iv_shicaiCover"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/i_nopic"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_shicaiCover"
            android:clickable="false"
            android:focusable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shicai_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17"
                />

            <TextView
                android:id="@+id/tv_shicai_decrip"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="功效与作用"
                android:textColor="#333333"
                android:textSize="@dimen/sp_11"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_shicai_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="功效与作用"
                    android:textColor="#0fa23f"
                    android:textSize="@dimen/sp_11"/>

                <TextView
                    android:id="@+id/iv_shicai_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="营养价值"
                    android:textColor="#0fa23f"
                    android:textSize="@dimen/sp_11"/>

                <TextView
                    android:id="@+id/iv_shicai_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="相宜相克"
                    android:textColor="#0fa23f"
                    android:textSize="@dimen/sp_11"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/common_bg"
        android:layout_below="@+id/rl_caipu"/>

</LinearLayout>

