<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ingre_item_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="#F5F5F5" >

    <RelativeLayout
        android:id="@+id/ingre_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <View
            android:id="@+id/img_dian"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/bg_round_dian_black" />

        <TextView
            android:id="@+id/itemText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_dian"
            android:paddingBottom="@dimen/dp_7.5"
            android:paddingTop="@dimen/dp_7.5"
            android:text="TextView"
            android:textColor="#555555"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/z_xiangke_ico_so"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/itemText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ingre_item"
        android:layout_centerVertical="true"
        android:maxWidth="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp__100"
        android:text="TextView"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>