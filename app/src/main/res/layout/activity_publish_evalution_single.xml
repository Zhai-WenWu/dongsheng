<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityLayout"
    style="@style/layout"
    tools:context="third.mall.activity.PublishEvalutionSingleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFE"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80">

                <ImageView
                    android:id="@+id/commodity_image"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="#7de"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/commodity_image"
                    android:layout_alignTop="@+id/commodity_image"
                    android:layout_toRightOf="@+id/commodity_image"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dp_5"
                        android:text="评分"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/sp_14"/>

                    <acore.widget.ProperRatingBar
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:prb_clickable="true"
                        app:prb_defaultRating="5"
                        app:prb_tickNormalDrawable="@drawable/i_score"
                        app:prb_tickSelectedDrawable="@drawable/i_score_activity"
                        app:prb_tickSize="@dimen/dp_35"
                        app:prb_tickSpacing="@dimen/dp_7.5"
                        app:prb_totalTicks="5"/>

                    <TextView
                        android:id="@+id/evalution_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="非常满意"
                        android:textColor="@color/common_super_tint_text"
                        android:textSize="@dimen/sp_14"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#E9E9E9"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/content_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:textColorHint="@color/common_super_tint_text"
                    android:hint="@string/publish_evalution_desc_hint"
                    android:lineSpacingExtra="@dimen/sp_10"
                    android:lineSpacingMultiplier="1"
                    android:minHeight="@dimen/dp_240"
                    android:paddingBottom="@dimen/dp_105"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/content_length_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/content_edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="0/500"
                    android:textColor="@color/common_super_tint_text"/>

                <LinearLayout
                    android:id="@+id/images_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:layout_alignBottom="@+id/content_edit"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"/>

                    <ImageView
                        android:id="@+id/select_image"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="#F00"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_to_circle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#E9E9E9"/>

                <ImageView
                    android:id="@+id/share_image"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/evalution_can_share_selected"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/share_image"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/common_text"
                    android:layout_centerVertical="true"
                    android:text="@string/publish_evalution_share_text"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
