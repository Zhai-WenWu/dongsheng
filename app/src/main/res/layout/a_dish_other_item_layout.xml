<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_43.5"
    android:background="#FFFFFE"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dish_other_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dp_16"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:id="@+id/dish_other_item_icon"
        android:layout_width="@dimen/dp_44"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@drawable/i_view_circle_down" />

    <TextView
        android:id="@+id/dish_other_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/dp_15"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        android:visibility="gone" />

    <View
        android:id="@+id/dish_other_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD" />

</RelativeLayout>