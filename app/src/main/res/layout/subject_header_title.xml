<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/sb_header_iv_user"
    android:layout_marginTop="@dimen/dp_15"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <acore.widget.TextViewShow
        android:id="@+id/sb_header_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_2"
        android:textColor="@color/c_black_text"
        android:textSize="@dimen/sp_19"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@color/backgroup_color"
        android:paddingTop="@dimen/dp_4">

        <acore.widget.TagTextView
            android:id="@+id/tv_recommend_subject"
            app:backgroundColor="#FFFFFF"
            app:radius="@dimen/dp_2"
            app:sideColor="@color/comment_color"
            app:sideWidth="@dimen/dp_0.5"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_1"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textColor="@color/comment_color"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"/>
    </RelativeLayout>

    <acore.widget.TextViewShow
        android:id="@+id/sb_header_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_header_tv_title"
        android:lineSpacingExtra="@dimen/dp_1"
        android:paddingTop="@dimen/dp_10"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        android:visibility="gone"/>
</RelativeLayout>
