<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_70"
    android:layout_height="@dimen/dp_50">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_itemIsFine"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_7"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_itemIsFine"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#929292"
            android:textSize="@dimen/sp_10"
            app:layout_constraintTop_toBottomOf="@+id/iv_itemIsFine"/>

        <ImageView
            android:id="@+id/activity_tabhost_redhot"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/tv_circle_ff533c_20"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/tv_tab_msg_num"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@drawable/tv_circle_ff533c_20"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_tab_msg_tow_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/tv_circle_ff533c_20"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="@dimen/dp_18"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="12+"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

        <View
            android:id="@+id/tab_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <View
            android:id="@+id/new_info"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            app:layout_constraintEnd_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintStart_toEndOf="@+id/iv_itemIsFine"
            app:layout_constraintTop_toTopOf="@+id/iv_itemIsFine"
            app:layout_constraintBottom_toTopOf="@+id/iv_itemIsFine"
            android:background="@drawable/btn_circle_red"
            android:visibility="gone" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>