<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activityLayout"
                style="@style/layout">

    <RelativeLayout
        android:id="@+id/title_rela_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/common_top_bg">

        <include
            android:id="@+id/ll_title"
            layout="@layout/c_view_bar_title"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/seek_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_below="@+id/title_rela_all"
        android:background="@color/common_top_button_text">

        <RelativeLayout
            android:id="@+id/seek_edit_rela"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/ed_search_layout_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toLeftOf="@+id/btn_search_global"
                android:layout_toRightOf="@+id/btn_back"
                android:background="@drawable/bg_search_edit_favorite">

                <ImageView
                    android:id="@+id/a_home_search_icon"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/z_home_real_search_icon"/>

                <EditText
                    android:id="@+id/ed_search_word"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/a_home_search_icon"
                    android:background="@drawable/bg_round_transparent"
                    android:gravity="center_vertical"
                    android:hint="搜菜谱、食材等"
                    android:imeOptions="actionSearch"
                    android:inputType="textPhonetic"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/common_top_search_text"
                    android:textColorHint="@color/common_top_search_hint_text"
                    android:textSize="@dimen/sp_14"/>


                <ImageView
                    android:id="@+id/btn_ed_clear_global"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_alignRight="@+id/ed_search_word"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_4"
                    android:padding="@dimen/dp_4"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_search_top_close"
                    android:visibility="visible"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/btn_search_global"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/ed_search_layout_main"
                android:layout_alignBottom="@+id/ed_search_layout_main"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_2"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:text="搜索"
                android:textColor="@color/common_bg"
                android:textSize="@dimen/sp_16"
                android:visibility="visible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/seek_but_rela"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_search_edit_favorite"
            android:gravity="center">

            <ImageView
                android:id="@+id/favorite_img"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_3"
                android:scaleType="centerCrop"
                android:src="@drawable/z_home_real_search_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/favorite_img"
                android:background="@drawable/bg_round_transparent"
                android:gravity="center_vertical"
                android:hint="搜菜谱、食材等"
                android:imeOptions="actionSearch"
                android:inputType="textPhonetic"
                android:maxLength="15"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_15"
                android:textColor="@color/common_top_search_text"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>

    </RelativeLayout>

    <cn.srain.cube.views.ptr.PtrClassicFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh_list_view_frame"
        android:layout_below="@+id/seek_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="500"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1"
        cube_ptr:ptr_resistance="1.7">

        <acore.widget.rvlistview.RvListView
            android:id="@+id/rvListview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

    </cn.srain.cube.views.ptr.PtrClassicFrameLayout>

</RelativeLayout>