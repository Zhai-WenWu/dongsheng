<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginBottom="@dimen/dp_42"
        android:layout_gravity="center">
        
        <ImageView 
            android:id="@+id/iv_not_data"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_gravity="center"
            android:src="@drawable/z_search_icon_no_data"/>
    
	    <TextView
            android:id="@+id/tv_not_data_hint"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_toRightOf="@+id/iv_not_data"
		    android:layout_marginLeft="@dimen/dp_8"
		    android:gravity="center" 
		    android:textSize="@dimen/sp_14"
		    android:textColor="#646464"
		    android:text="没有找到 "/>
	            
		<TextView
		    android:id="@+id/tv_noData_search" 
   		    style="@style/singleText"
		    android:layout_width="wrap_content"
		    android:layout_centerInParent="true"
		    android:layout_toRightOf="@+id/tv_not_data_hint"
		    android:gravity="center"
		    android:textSize="@dimen/sp_14"
		    android:text="土豆"
		    android:textColor="#fa8686" />
		
		<!-- <TextView
		    android:id="@+id/tv_noData_from" 
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_alignParentRight="true"
		    android:gravity="center"
		    android:textSize="@dimen/sp_14"
		    android:textColor="#646464"
		    android:text="” 相关的菜谱哦" /> -->
		
	</RelativeLayout>
	
	<TextView
	    android:id="@+id/tv_noData_tuijian"  
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="为您推荐"/>
            

</LinearLayout>
