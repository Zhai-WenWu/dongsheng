<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout"
    android:background="@android:color/transparent" >

    <View
        android:id="@+id/view_hide"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#44000000"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_15" >

        <LinearLayout
            style="@style/layoutWhite"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/quanTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_15"
                    android:textSize="@dimen/sp_20" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#ccc" />
            </LinearLayout>

            <Button
                android:id="@+id/report_1"
                style="@style/layoutWhiteBtn"
                android:textColor="@color/quan_blue_report"
                android:visibility="visible" />

            <View
                android:id="@+id/report_1_view"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#ccc"
                android:visibility="gone" />

            <Button
                android:id="@+id/report_2"
                style="@style/layoutWhiteBtn"
                android:textColor="@color/quan_blue_report" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#ccc" />

            <Button
                android:id="@+id/report_3"
                style="@style/layoutWhiteBtn"
                android:textColor="@color/quan_blue_report" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#ccc" />

            <Button
                android:id="@+id/report_4"
                style="@style/layoutWhiteBtn"
                android:textColor="@color/quan_blue_report" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#ccc" />

            <Button
                android:id="@+id/report_5"
                style="@style/layoutWhiteBtn"
                android:textColor="@color/quan_blue_report" />
        </LinearLayout>

        <LinearLayout
            style="@style/layoutWhite"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical" >

            <Button
                android:id="@+id/report_Cancel"
                style="@style/layoutWhiteBtn"
                android:text="取消"
                android:textColor="@color/comment_color" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>