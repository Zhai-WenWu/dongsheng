<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/search_fake_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_7.5"
        android:paddingTop="@dimen/dp_7.5" >

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/i_nopic" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/singleText"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/iv_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_img"
            android:ellipsize="end"
            android:text="title"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_toRightOf="@+id/iv_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="info"
            android:textColor="#666"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/itemNum"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/search_fake_layout"
        android:background="#CCCCCC" />

</RelativeLayout>