<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dish_footer_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/dp_8"
    >

    <ImageView
        android:id="@+id/a_dish_detail_show_img"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_170"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="@dimen/dp_170"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/a_dish_detail_show_img"
        android:background="@drawable/bg_dish_user_show_subject"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a_dish_detail_show_img"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/a_dish_detail_user_icon"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:background="@color/transparent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/a_dish_detail_user_name"
                style="@style/singleText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/a_dish_detail_user_icon"
                android:paddingRight="@dimen/dp_12"
                android:textColor="#b5b4b4"
                android:textSize="@dimen/sp_11"
                android:layout_toLeftOf="@+id/a_dish_detail_time"
                />

            <TextView
                android:id="@+id/a_dish_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                android:textColor="#b5b4b4"
                android:textSize="@dimen/sp_11"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a_dish_detail_zan"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_39"
                android:background="@color/transparent"
                android:padding="@dimen/dp_5" />

            <TextView
                android:id="@+id/a_dish_detail_zan_numer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_7"
                android:background="@color/transparent"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>