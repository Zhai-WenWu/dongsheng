<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:background="#fffffe">
    <RelativeLayout
        android:id="@+id/mask_album_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@color/transparent_fe"
        android:layout_marginTop="@dimen/dp_12">

        <ImageView
            android:id="@+id/mask_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_fe"
            android:visibility="gone"/>

        <View
            android:id="@+id/mask_layer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4c000000"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/mask_vip"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_3"
            android:src="@drawable/vip"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_34"
            android:gravity="center"
            android:background="@color/transparent_fe"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mask_title_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_white_text"
                android:textSize="@dimen/sp_21"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/transparent_fe"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/dp_4"
                android:ellipsize="end"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/transparent_fe"
                android:layout_marginTop="@dimen/dp_6">

                <TextView
                    android:id="@+id/mask_top_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:background="@color/transparent_fe"
                    android:textColor="@color/c_white_text"
                    android:text="置顶"
                    android:layout_marginRight="@dimen/dp_4"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/mask_dot"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_4"
                    android:background="@drawable/bg_dot"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/mask_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_fe"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/c_white_text"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_below="@id/album_container"/>
</RelativeLayout>
