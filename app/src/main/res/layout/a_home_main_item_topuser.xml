<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_15" >

    <ImageView
        android:id="@+id/iv_userImg"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:scaleType="fitCenter" />
    
    <ImageView
        android:id="@+id/iv_userType"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_alignBottom="@+id/iv_userImg"
        android:layout_alignRight="@+id/iv_userImg"
        android:background="@drawable/z_user_gourmet_ico"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_userImg"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/iv_userImg"
        android:layout_alignRight="@+id/iv_userImg"
        android:paddingTop="@dimen/dp_5"
        android:singleLine="true"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>