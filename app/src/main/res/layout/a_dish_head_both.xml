<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_11"
    android:paddingTop="@dimen/dp_17">

    <LinearLayout
        android:id="@+id/dish_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/dish_btn_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_search_dish_head"
            android:clickable="true"
            android:padding="@dimen/dp_8">

            <ImageView
                android:id="@+id/search_info_img"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/round_circle60_ccc"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/search_info_img"
                android:layout_alignTop="@+id/search_info_img"
                android:layout_toRightOf="@+id/search_info_img"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/search_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="功效"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/search_info_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营养功效/营养"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dish_btn_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_search_dish_head"
            android:clickable="true"
            android:padding="@dimen/dp_8">

            <ImageView
                android:id="@+id/search_taboo_img"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/z_caipu_so_ico_xiangke"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/search_taboo_img"
                android:layout_alignTop="@+id/search_taboo_img"
                android:layout_toRightOf="@+id/search_taboo_img"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/search_taboo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="相克"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/search_taboo_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食物相克/宜搭"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dish_btn_ingre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_grey_e8_5"
        android:orientation="horizontal"
        android:padding="@dimen/dp_7.5"
        android:visibility="gone">

        <ImageView
            android:id="@+id/search_info_detail_img"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/round_circle60_ccc"
            />

        <TextView
            android:id="@+id/search_info_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/search_info_detail_img"
            android:text="相克"
            android:textSize="@dimen/sp_15"/>

        <TextView
            android:id="@+id/search_info_detail_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_info_detail_tv"
            android:layout_below="@+id/search_info_detail_tv"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toLeftOf="@+id/dish_ingre_ico"
            android:text="食物相克/宜搭"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13"/>

        <ImageView
            android:id="@+id/dish_ingre_ico"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:src="@drawable/i_ico_right_gray_main"/>
    </RelativeLayout>

</RelativeLayout>