<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:background="@color/common_top_bg">


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dp_35"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="@dimen/dp_5.5"
        android:src="@drawable/z_me_mypage_ico_back"/>

    <Button
        android:id="@+id/btn_search_global"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/ed_search_layout_main"
        android:layout_alignBottom="@+id/ed_search_layout_main"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_13"
        android:text="搜索"
        android:textColor="@color/common_top_text"
        android:textSize="@dimen/sp_16"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/speakSearch_main"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_30"
        android:layout_alignRight="@+id/ed_search_layout_main"
        android:clickable="true"
        android:onClick="speakSearch"
        android:paddingBottom="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_6"
        android:paddingTop="@dimen/dp_6"
        android:scaleType="centerInside"
        android:src="@drawable/i_ico_voice"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/ed_search_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_search_edit"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_back"
        android:layout_toLeftOf="@+id/btn_search_global">

        <ImageView
            android:id="@+id/a_home_search_icon"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_3"
            android:scaleType="centerCrop"
            android:src="@drawable/z_home_real_search_icon"/>

        <EditText
            android:id="@+id/ed_search_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/a_home_search_icon"
            android:background="@drawable/bg_round_transparent"
            android:gravity="center_vertical"
            android:hint="搜菜谱、食材等"
            android:imeOptions="actionSearch"
            android:inputType="textPhonetic"
            android:maxLength="15"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/common_top_search_text"
            android:textColorHint="@color/common_top_search_hint_text"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:id="@+id/a_global_search_speeach"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:padding="@dimen/dp_5"
            android:src="@drawable/i_search_speeach"/>

        <ImageView
            android:id="@+id/btn_ed_clear_global"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:padding="@dimen/dp_4"
            android:layout_alignRight="@+id/ed_search_word"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_4"
            android:scaleType="fitXY"
            android:src="@drawable/btn_search_top_close"
            android:visibility="visible"/>

    </RelativeLayout>
</RelativeLayout>