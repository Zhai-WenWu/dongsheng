<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_search_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollview_search_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/search_activity_ad_baidu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10.5"
                android:paddingRight="@dimen/dp_10.5"
                android:paddingTop="@dimen/dp_15"
                android:visibility="visible" />
            <RelativeLayout
                android:id="@+id/search_activity_ad_gdt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10.5"
                android:paddingRight="@dimen/dp_10.5"
                android:paddingTop="@dimen/dp_15"
                android:visibility="visible" />
            <include 
		 	    android:id="@+id/search_activity_ad_banner_layout" 
		 	    layout="@layout/ad_banner_view"
		 	    android:layout_width="match_parent"
                android:layout_height="wrap_content"
		 	    android:layout_marginRight="@dimen/dp_10.5"
		 	    android:layout_marginLeft="@dimen/dp_10.5"
                android:layout_marginTop="@dimen/dp_15"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/hot_search_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="@dimen/dp_5.5"
                        android:paddingLeft="@dimen/dp_13"
                        android:text="热搜榜"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/search_hot_img"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_15"
                        android:src="@drawable/search_hot_refrash" />
                </RelativeLayout>

                <TableLayout
                    android:id="@+id/search_hot_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hot_search_title"
                    android:background="#FFFFFF"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingTop="@dimen/dp_1" />

                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/search_hot_table"
                    android:layout_alignTop="@+id/search_hot_table"
                    android:background="#F5F5F5" />

                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/search_hot_table"
                    android:layout_alignRight="@+id/search_hot_table"
                    android:layout_alignTop="@+id/search_hot_table"
                    android:background="#F5F5F5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignTop="@+id/search_hot_table"
                    android:background="#F5F5F5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignBottom="@+id/search_hot_table"
                    android:background="#F5F5F5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/search_his_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_16" >

                <RelativeLayout
                    android:id="@+id/his_search_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="@dimen/dp_5.5"
                        android:paddingLeft="@dimen/dp_13"
                        android:text="搜索历史"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/search_his_clean_img"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_16.5"
                        android:src="@drawable/z_quanso_ico_del" />
                </RelativeLayout>

                <TableLayout
                    android:id="@+id/search_his_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/his_search_title"
                    android:background="#FFFFFF"
                    android:paddingLeft="@dimen/dp_0.5"
                    android:paddingTop="@dimen/dp_0.5" />

                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/search_his_table"
                    android:layout_alignTop="@+id/search_his_table"
                    android:background="#F5F5F5" />

                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/search_his_table"
                    android:layout_alignRight="@+id/search_his_table"
                    android:layout_alignTop="@+id/search_his_table"
                    android:background="#F5F5F5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignTop="@+id/search_his_table"
                    android:background="#F5F5F5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignBottom="@+id/search_his_table"
                    android:background="#F5F5F5" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>