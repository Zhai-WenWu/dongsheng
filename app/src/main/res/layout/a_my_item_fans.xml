<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_nocolor" >

    <ImageView
        android:id="@+id/fans_user_img"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_round_grey_dd50"
        android:layout_marginTop="@dimen/dp_15" />

    <ImageView
        android:id="@+id/iv_userType"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_alignBottom="@+id/fans_user_img"
        android:layout_alignRight="@+id/fans_user_img"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:background="@drawable/z_user_gourmet_ico"
        android:visibility="invisible"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/fans_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toRightOf="@+id/fans_user_img"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dp_10"
        android:singleLine="true"
        android:text="名字"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:id="@+id/fans_user_lv"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp__1"
        android:layout_toRightOf="@+id/fans_user_name"
        android:gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/fans_user_item_choose"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_23"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_round_white8"
        android:focusable="false"
        android:gravity="center"
        android:text="已关注"
        android:textSize="@dimen/sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@+id/fans_user_img"
        android:layout_marginTop="@dimen/dp_14"
        android:background="#D3D1D1" />

</RelativeLayout>