<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <View
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#EAE8E0" />

    <RelativeLayout
        android:id="@+id/rl_caipu"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_120"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_caipuCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/i_nopic" />

            <ImageView
                android:id="@+id/image_play"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:src="@drawable/home_item_play"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image_layout"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/image_layout"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_caipu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_3"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_3"
                android:lines="1"
                android:maxWidth="@dimen/dp_150"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6.5"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#333333"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/sp_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>