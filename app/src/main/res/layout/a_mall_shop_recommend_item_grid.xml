<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_164"
    android:layout_height="wrap_content"
    android:background="#fffffe"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/product_iv"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_164"
        android:background="@drawable/mall_recommed_product_backgroup" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_below="@+id/product_iv"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" >

        <RelativeLayout
            android:id="@+id/rela_product" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:textColor="#333333"
            android:lineSpacingExtra="@dimen/dp_2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#95958f"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/product_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/product_num"
            android:textColor="#95958f"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/dp_11" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line_iv"
            android:layout_below="@+id/rela_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/mall_shop_recommond_line" />

        <RelativeLayout
            android:layout_below="@+id/line_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5" >

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/comment_color"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:id="@+id/product_add"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:background="@drawable/mall_add_shop_recommend" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>