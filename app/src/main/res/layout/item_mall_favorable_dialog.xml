<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffffe"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15" >

    <RelativeLayout
        android:id="@+id/item_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mall_shop_favorable_item_n" >

        <RelativeLayout
            android:id="@+id/item_rela_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentTop="true"
            android:background="#fff8f8" >

            <ImageView
                android:id="@+id/item_rela_line_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mall_favorable_dialog_normal_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_rela_line" >

            <RelativeLayout
                android:id="@+id/item_rela_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/dp_12" >

                <RelativeLayout
                    android:id="@+id/item_money_rule_rela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginRight="@dimen/dp_25" >

                    <RelativeLayout
                        android:id="@+id/item_money_rela"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" >

                        <TextView
                            android:id="@+id/item_tv_money_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="￥"
                            android:textColor="@color/comment_color"
                            android:textSize="@dimen/dp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_toRightOf="@+id/item_tv_money_sign"
                            android:lineSpacingExtra="0dp"
                            android:textColor="@color/comment_color"
                            android:textSize="@dimen/dp_50"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/item_money_rule_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_money_rela"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/comment_color"
                        android:textSize="@dimen/dp_14" />
                </RelativeLayout>

                <View
                    android:id="@+id/image_line"
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_money_rule_rela"
                    android:background="@drawable/mall_favorable_dialog_line_normal_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_rela_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15" >

                <TextView
                    android:id="@+id/item_tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_16" />

                <RelativeLayout
                    android:id="@+id/item_show_line"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_tv_shop_name"
                   android:layout_alignParentRight="true" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_centerVertical="true"
                        android:background="#e1e2e4" />

                    <TextView
                        android:id="@+id/item_show_line_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="#fff8f8"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:text="·"
                        android:textColor="#a0a0a0"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/item_tv_shop_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_show_line"
                    android:layout_alignParentRight="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_state"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_73"
            android:layout_centerInParent="true"
            android:background="@drawable/mall_favorable_dialog_hasgone"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>