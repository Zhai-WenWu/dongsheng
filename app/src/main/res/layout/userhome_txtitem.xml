<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:background="#ffffff">

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e9e9e9"/>

    <RelativeLayout
        android:id="@+id/txt_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74.5"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_below="@+id/line_top"
        android:layout_toLeftOf="@+id/imgs">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/sp_17"
            android:lineSpacingExtra="@dimen/dp_4"
            android:textColor="@color/c_black_text"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/user_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/name_gourmet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dp_14"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_1"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColor="#b5b4b4"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/gourmet_icon"
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_11"
                    android:src="@drawable/home_item_gourmet_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_14"
                android:textColor="#b5b4b4"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b5b4b4"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/status_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imgs"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_72.5"
        android:layout_below="@+id/line_top"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="gone"/>

        <View
            android:id="@+id/layer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#19ffffff"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/play_img"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_centerInParent="true"
            android:src="@drawable/home_item_play"
            android:background="@color/transparent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ad_tag"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_16.5"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/home_item_adtag_black"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_below="@id/txt_container"/>

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_below="@id/imgs"/>
</RelativeLayout>
