<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FEFEFE"
    android:paddingTop="@dimen/dp_11"
    android:paddingBottom="@dimen/dp_13.5" >

        <LinearLayout
            android:id="@+id/ll_pingkage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pingkage_style"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:background="@color/comment_color"
                android:gravity="center"
                android:text="包邮"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_11" />

            <TextView
                android:id="@+id/tv_pingkage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp__1.5"
                android:textColor="#333333"
                android:textSize="@dimen/dp_13.5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_pingkage"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_11" >

            <TextView
                android:id="@+id/tv_reduce_style"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="满减"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_11" />

            <TextView
                android:id="@+id/tv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp__1.5"
                android:textColor="#333333"
                android:textSize="@dimen/dp_13.5" />
        </LinearLayout>

</RelativeLayout>