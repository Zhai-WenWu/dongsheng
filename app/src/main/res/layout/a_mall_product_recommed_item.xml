<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_70"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/recommed_iv"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_112"
        android:src="@drawable/mall_recommed_product_backgroup"
        />

    <TextView
        android:id="@+id/recommed_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommed_iv"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/recommed_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommed_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>