<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="16dp"
        android:background="@drawable/mall_dialog_backgroup" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="7dp"
            android:gravity="center"
            android:text="确定要清理缓存吗？"
            android:textColor="#333333"
            android:textSize="16sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/dialog_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dialog_title"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="7dp"
            android:gravity="center"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/dialog_check_img"
                android:layout_width="@dimen/dp_12.5"
                android:layout_height="@dimen/dp_12.5"
                android:src="@drawable/i_check_on"
                />
            <TextView
                android:id="@+id/dialog_check_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="同时清除离线菜谱"
                android:textSize="@dimen/sp_12"
                android:textColor="#646464"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/dialog_check" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#dbdbdb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialog_cancel"
                    style="@style/singleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="cancel"
                    android:visibility="gone"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/dialog_negative_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#dbdbdb"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dialog_negative"
                    style="@style/singleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="negative"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/dialog_sure_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="#dbdbdb" />

                <TextView
                    android:id="@+id/dialog_sure"
                    style="@style/singleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="sure"
                    android:textColor="#4ac867"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>