<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout" >

    <acore.widget.MsgScrollView
        android:id="@+id/msg_inform_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:id="@+id/msg_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                layout="@layout/title_left_right_item"/>

            <LinearLayout
                android:id="@+id/msgInform_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <include
                    android:id="@+id/msg_comments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    layout="@layout/title_switchbtn_item"/>

                <include
                    android:id="@+id/msg_good"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    layout="@layout/title_switchbtn_item"/>

                <include
                    android:id="@+id/msg_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    layout="@layout/title_switchbtn_item"/>

                <include
                    android:id="@+id/msg_qa"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    layout="@layout/title_switchbtn_item"/>

                <include
                    android:id="@+id/msg_official"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    layout="@layout/title_switchbtn_item"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tip_start_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:text="@string/msg_close_tip"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#999999"/>

                <Button
                    android:id="@+id/start_btn"
                    android:layout_width="@dimen/dp_138"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_73"
                    android:text="去开启"
                    android:textSize="@dimen/sp_16"
                    android:layout_gravity="center"
                    android:textColor="@color/ysf_white"
                    android:background="@drawable/bg_round_corners8_f23030"
                    android:tag="start_btn"/>
            </LinearLayout>

        </LinearLayout>
    </acore.widget.MsgScrollView>

</RelativeLayout>