<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout" >

    <LinearLayout
        android:id="@+id/my_modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_setting_group_1"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/c_gray_dddddd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_15" >

            <TextView
                android:id="@+id/my_setting_sex_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_20"
                android:text="旧密码    "
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/my_setting_sex_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/my_setting_sex_title"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:paddingRight="@dimen/dp_20"
                android:password="true"
                android:textSize="@dimen/sp_15" />
            
            <ImageView
                android:id="@+id/iv_oldPsw" 
                style="@style/login_lookPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/c_gray_dddddd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_15" >

            <TextView
                android:id="@+id/my_setting_birthday_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_20"
                android:text="新密码    "
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/my_setting_birthday_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/my_setting_birthday_layout"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:paddingRight="@dimen/dp_20"
                android:password="true"
                android:textSize="@dimen/sp_15" />
            
             <ImageView
                 android:id="@+id/iv_newPsw" 
                style="@style/login_lookPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/c_gray_dddddd" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/c_gray_dddddd" />
    </LinearLayout>

</RelativeLayout>