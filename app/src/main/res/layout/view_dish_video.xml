<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageview_rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ececec" />
   
    <LinearLayout
        android:id="@+id/play_layout_1"
        android:layout_width="@dimen/dp_68"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_14"
        android:orientation="vertical"
        android:background="@drawable/bg_dish_video_5">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dish_video_play_iv"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fffffe"
            android:layout_marginTop="@dimen/dp_2.5"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_11"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/play_layout_2"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/play_video"
        android:layout_width="@dimen/dp_49"
        android:layout_height="@dimen/dp_49"/>

</RelativeLayout>