<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityLayout"
    style="@style/layout"
    android:clickable="false">

    <acore.widget.MsgScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="请选择原因"
                    android:textColor="#8E8E8E"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_report_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_white_text"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_1"
                        android:text="广告骚扰"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/tv_1"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_2"
                        android:text="与美食无关"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/tv_2"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_3"
                        android:text="政治敏感"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/tv_3"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/img_4"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_4"
                        android:text="色情低俗"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/tv_4"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/img_5"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_5"
                        android:text="人身攻击/谩骂/诽谤"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/tv_5"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/img_6"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/tv_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_6"
                        android:text="冒用/侵权"
                        />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/quan_report_blacklist_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="加入黑名单"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    />

                <acore.widget.SwitchButton
                    android:id="@+id/quan_report_blacklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/admin_report_tv_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="特别权限"
                android:textColor="#8E8E8E"/>

            <LinearLayout
                android:id="@+id/admin_report_conlection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/admin_iv_1"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/admin_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/admin_iv_1"
                        android:text="禁言3天"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/admin_tv_1"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/admin_iv_2"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/admin_tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/admin_iv_2"
                        android:text="封账号"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/admin_tv_2"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/admin_iv_3"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/admin_tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/admin_iv_3"
                        android:text="封设备"
                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/admin_report_conlection_quan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/quanadmin_iv_1"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/quanadmin_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/quanadmin_iv_1"
                        android:text="不更新"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_alignLeft="@+id/quanadmin_tv_1"
                        android:layout_alignParentBottom="true"
                        android:background="#DDDDDD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:paddingLeft="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/quanadmin_iv_3"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@drawable/j_select"/>

                    <TextView
                        android:id="@+id/quanadmin_tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/quanadmin_iv_3"
                        android:text="删贴"
                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quan_report_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举报说明>>"
                    android:textColor="#8E8E8E"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_quan_report_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/bg_btn_report_quan"
                android:gravity="center"
                android:text="提交"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </acore.widget.MsgScrollView>
</RelativeLayout>