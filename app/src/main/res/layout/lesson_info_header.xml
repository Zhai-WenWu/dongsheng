<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">

        <ImageView
            android:id="@+id/background"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/description_layout"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_6.5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@drawable/lesson_black_shadow"
            android:layout_height="@dimen/dp_75">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="课程标题"
                android:textSize="@dimen/sp_19"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/background"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13"
                android:layout_height="wrap_content"
                tools:text="课程介绍"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/info_layout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87">

        <LinearLayout
            android:id="@+id/score_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/score"
                tools:text="9.8"
                android:textSize="@dimen/sp_17"
                android:textColor="#F23030"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/score_suffix"
                android:paddingBottom="@dimen/dp_5"
                tools:text="哈有评价"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/common_tint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_10"
            android:background="#CCCCCC"
            />

        <LinearLayout
            android:id="@+id/lesson_num_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lesson_num"
                tools:text="9"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/common_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lesson_num_suffix"
                android:paddingBottom="@dimen/dp_5"
                tools:text="节课"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/common_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_10"
            android:background="#CCCCCC"
            />

        <LinearLayout
            android:id="@+id/update_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/update_time"
                tools:text="每周三"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/common_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/update_time_suffix"
                android:paddingBottom="@dimen/dp_5"
                tools:text="更新"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/common_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/learned_layout"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#E5E5E3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <LinearLayout
                android:id="@+id/learned_user"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/learned_desc"
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/learned_desc"
                tools:text="1566人已完成学习"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E3"/>

</LinearLayout>