<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:background="#FFFFFE"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/a_user_home_dish_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/i_nopic">

        <acore.widget.ImageViewVideo
            android:id="@+id/iv_video_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_225"
            android:scaleType="centerCrop"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:id="@+id/a_user_home_dish_sole"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@drawable/bg_home_dish_sole"
                android:gravity="center"
                android:text="独家"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_11"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/a_user_home_dish_jing"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@drawable/bg_user_home_dish_jing"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="精华"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_11"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/a_user_home_dish_you"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@drawable/bg_user_home_dish_you"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="优质"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_11"
                android:visibility="gone"/>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/a_user_home_dish_delete"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/i_user_home_delete"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:id="@+id/a_user_home_dish_author_rela_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_alignBottom="@+id/a_user_home_dish_image_layout"/>

    <RelativeLayout
        android:id="@+id/a_user_home_dish_author_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/a_user_home_dish_author_rela_view"
        android:layout_marginRight="@dimen/dp_15">

        <ImageView
            android:id="@+id/a_user_home_dish_author_image"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/a_user_home_dish_author_gourmet"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_alignBottom="@+id/a_user_home_dish_author_image"
            android:layout_alignRight="@+id/a_user_home_dish_author_image"
            android:src="@drawable/z_user_gourmet_ico"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/a_user_home_dish_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/a_user_home_dish_author_image"
            android:layout_marginTop="@dimen/dp_13"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="@dimen/dp_70"
            android:minWidth="@dimen/dp_49"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/a_user_home_dish_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a_user_home_dish_image_layout"
        android:layout_marginRight="@dimen/dp_11"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/a_user_home_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_4"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#4D4A4A"
            android:textSize="@dimen/dp_17"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a_user_home_dish_taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:textColor="#4d4a4a"
                android:textSize="@dimen/dp_12"/>

            <TextView
                android:id="@+id/a_user_home_dish_revieweding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:text="审核中"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/a_user_home_dish_uploading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:text="上传中"
                android:textColor="#18b942"
                android:textSize="@dimen/dp_12"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/a_user_home_dish_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:textColor="#df3031"
                android:textSize="@dimen/dp_12"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/a_user_home_dish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"/>

    </LinearLayout>

</RelativeLayout>