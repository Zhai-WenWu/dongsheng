<?xml version="1.0" encoding="utf-8"?>
<amodule.main.view.VipGuideBannerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_vipguide_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_9"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:paddingTop="@dimen/dp_9">

    <ImageView
        android:id="@+id/guide_icon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/home_vipguide_icon" />

    <LinearLayout
        android:id="@+id/guide_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#816319"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guide_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="Â·"
            android:textColor="#816319"
            android:textSize="@dimen/dp_18"
            android:visibility="gone" />

        <TextView
            android:id="@+id/guide_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#816319"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/guide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLength="4"
        android:textColor="#816319"
        android:textSize="@dimen/dp_12" />

    <ImageView
        android:id="@+id/guide_arrow"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_9"
        android:scaleType="centerInside"
        android:src="@drawable/home_vipguide_arrowright" />

</amodule.main.view.VipGuideBannerView>