<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_ad"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_101"
        android:padding="@dimen/dp_15">

        <acore.widget.ImageViewVideo
            android:id="@+id/iv_adCover"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_71"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#26ffffff"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@id/icon_ad_gdt"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_13.5"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_alignRight="@+id/iv_adCover"
            android:layout_alignBottom="@+id/iv_adCover"
            android:src="@drawable/icon_ad_gdt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/iv_adCover"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_adCover"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_ad_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_17" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_ad_decrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:ellipsize="end"
                android:lines="1"
                android:paddingRight="@dimen/dp_15"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/sp_11" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_ad_observed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />

                <include
                    android:id="@+id/ad_hint"
                    style="@style/adHint"
                    layout="@layout/ad_hint_view"
                    android:layout_alignParentRight="true" />

                <!--<TextView
                    android:id="@+id/tv_ad_tag"
                    android:layout_width="@dimen/dp_27"
                    android:layout_height="@dimen/dp_13"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_3.5"
                    android:background="@drawable/ad_tag_view_search"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="广告"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_10"/>-->
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="#EAE8E0" />

    <View
        android:id="@+id/v_ad_item_tail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/rl_ad"
        android:background="@color/common_bg"
        android:visibility="visible" />
</RelativeLayout>