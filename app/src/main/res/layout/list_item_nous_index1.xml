<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_nous_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroup_color"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_12" >

    <ImageView
        android:id="@+id/iv_nousCover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:scaleType="fitCenter"
        android:src="@drawable/i_nopic" />

    <TextView
        android:id="@+id/tv_nousTitle"
        style="@style/shadowTextBlack"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/iv_nousCover"
        android:layout_gravity="bottom"
        android:background="#90000000"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:textSize="@dimen/sp_17" />

</RelativeLayout>