<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/barTitle"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/topbar_height"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/dp_11">

    <RelativeLayout
        android:id="@+id/share_wechat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/wechat_tip"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_2"
            android:scaleType="centerInside"
            android:src="@drawable/img_integral_tip"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_wechat" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_wechatcomments"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/share_wechat"
        android:paddingLeft="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_9">

        <ImageView
            android:id="@+id/comments_tip"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_14"
            android:scaleType="centerInside"
            android:src="@drawable/img_integral_tip"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_wechat_comments" />
    </RelativeLayout>

</RelativeLayout>