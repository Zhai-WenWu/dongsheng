<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exp_user_rela"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffffe"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/customer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/dp_19"
        android:paddingTop="@dimen/dp_16">

        <ImageView
            android:id="@+id/auther_userImg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_round_grey_e0e0e0_50"/>

        <ImageView
            android:id="@+id/cusType"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignBottom="@+id/auther_userImg"
            android:layout_alignRight="@+id/auther_userImg"
            android:clickable="true"
            android:src="@drawable/z_user_gourmet_ico"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_toRightOf="@+id/auther_userImg"
            android:paddingBottom="@dimen/dp_2">

            <RelativeLayout
                android:id="@+id/caipu_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_name"
                    style="@style/singleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中文nickname"
                    android:textColor="#535353"
                    android:textSize="@dimen/sp_15"/>

                <ImageView
                    android:id="@+id/user_vip"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/caipu_user_name"
                    android:gravity="center"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/user_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/caipu_user"
                android:layout_marginTop="@dimen/dp_1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="中文desc"
                android:textColor="#BCBCBC"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/follow_rela"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_follow">

            <TextView
                android:id="@+id/follow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="关注"
                android:textColor="@color/comment_color"
                android:textSize="@dimen/sp_13"
                />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/interval"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_11"
        android:visibility="gone"
        android:layout_below="@+id/customer_layout"
        android:background="@color/common_bg"/>
</RelativeLayout>
