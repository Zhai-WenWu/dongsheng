<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_19"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/share_logo"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_qzone"/>

    <ImageView
        android:id="@+id/integral_tip"
        android:layout_width="@dimen/dp_39"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_integral_tip"
        android:visibility="gone"
        android:layout_above="@+id/share_name"
        android:layout_marginBottom="@dimen/dp__2"/>

    <TextView
        android:id="@+id/share_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_logo"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:text="QQ空间"
        android:textColor="#333333"
        android:textSize="@dimen/sp_11"/>

</RelativeLayout>
