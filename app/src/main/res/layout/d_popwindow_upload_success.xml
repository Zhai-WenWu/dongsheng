<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#d0000000"
              android:paddingTop="@dimen/dp_80"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dp_30"
              android:paddingRight="@dimen/dp_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#00000000"
        android:gravity="right|bottom"
        android:paddingBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/d_popwindow_close"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/i_icon_pop_close"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_circle10_ffffff"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_43">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_28"
            android:paddingRight="@dimen/dp_28">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_19"
                android:layout_weight="6"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/d_popwindow_img"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:clickable="false"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@drawable/icon_dishvideo_upload_sucess"/>

                <TextView
                    android:id="@+id/d_popwindow_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/d_popwindow_img"
                    android:gravity="top"
                    android:clickable="false"
                    android:text="发布成功"
                    android:textColor="#00c847"
                    android:textSize="@dimen/sp_18"/>

                <TextView
                    android:id="@+id/tv_dish_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:clickable="false"
                    android:ellipsize="marquee"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:text="鱼香肉丝"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_dish_cover"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_72"
                android:layout_gravity="right|top"
                android:clickable="false"
                android:scaleType="centerCrop"/>

        </LinearLayout>


        <TextView
            android:id="@+id/d_popwindow_share_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_30"
            android:text="分享给你的朋友们："
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_11"
            android:background="#f1eee4"/>

        <GridView
            android:id="@+id/d_popwindow_share_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fffffffe"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:stretchMode="columnWidth"/>
    </LinearLayout>
</LinearLayout>
