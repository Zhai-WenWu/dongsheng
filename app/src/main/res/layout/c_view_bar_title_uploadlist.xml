<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/barTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/common_top_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/title"
            style="@style/singleText"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="发菜谱"
            android:textColor="@color/common_top_text"
            android:textSize="@dimen/sp_17"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_18"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/z_z_topbar_ico_back_white"/>

    <TextView
        android:id="@+id/tv_cancel_upload"
        style="@style/top_titleBarView"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:text="取消上传"
        android:textColor="@color/common_top_text"
        android:textSize="@dimen/sp_14"
        android:visibility="visible"/>

</RelativeLayout>

