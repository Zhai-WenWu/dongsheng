<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5">

    <TextView
        android:id="@+id/psts_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textColor="@color/circle_tab_text_color"
        android:gravity="center"
        android:singleLine="true" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:minWidth="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:layout_toRightOf="@+id/psts_tab_title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/tv_circle_white"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#ff533c"
        android:textSize="@dimen/sp_10"
        android:visibility="invisible"/>
</RelativeLayout>