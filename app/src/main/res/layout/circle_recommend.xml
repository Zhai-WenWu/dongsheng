<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_recommendFriend"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical"
              android:visibility="visible">
    
        <RelativeLayout
            android:id="@+id/recommendFriend_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:background="#fffffe"
            android:clickable="true" >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="推荐"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/change_img"
                android:layout_toLeftOf="@+id/change_tv"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/circle_follow_refresh"/>
            <TextView
                android:id="@+id/change_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:text="换一组"
                android:textColor="#999999"
                android:textSize="@dimen/sp_15" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_alignParentBottom="true"
                android:background="#ececec"/>
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/recommend_friends_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fffffe"
        android:paddingBottom="@dimen/dp_6"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_11"
        android:layout_alignParentBottom="true"
        android:background="@color/common_bg"/>
        
</LinearLayout>
