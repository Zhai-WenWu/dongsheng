<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<acore.widget.ZoomLayout-->
    <!--android:id="@+id/a_home_zoom_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/video_img_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#898989"
        android:orientation="vertical"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/video_dredge_vip_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:gravity="center_vertical"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/video_ad_layout_parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone">

        <include
            android:id="@+id/video_ad_layout"
            layout="@layout/ad_gdt_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_240"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</RelativeLayout>