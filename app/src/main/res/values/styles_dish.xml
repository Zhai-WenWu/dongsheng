 <resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 菜谱详情页小标题 -->
    <style name="d_showDishTitle" parent="tableTitle">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">@dimen/dp_30</item>
        <item name="android:paddingBottom">@dimen/dp_17</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">#000</item>
    </style>
    
     <style name="d_uploadDishAddIcon">
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:background">@drawable/z_caipu_upload_up_ico_add</item>
    </style>
 
     <style name="d_uploadDishAddText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:textColor">@color/comment_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    
     <style name="d_uploadDishText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dp_40</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    
     <style name="d_uploadDishHeadText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>
    
     <style name="d_uploadDishLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">#dddddd</item>
    </style>
    
    <style name="d_uploadDishVerticalLine">
        <item name="android:layout_width">@dimen/dp_0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#dddddd</item>
    </style>
    <style name="d_uploadDishHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.5</item>
        <item name="android:background">#dddddd</item>
    </style>

     <style name="d_makeViewBtn">
         <item name="android:layout_width">@dimen/dp_145</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:clickable">true</item>
         <item name="android:gravity">center</item>
         <item name="android:textColor">#333333</item>
         <item name="android:textSize">@dimen/sp_13</item>
         <item name="com.xiangha:radius">@dimen/dp_4</item>
         <item name="com.xiangha:backgroundColor">#d9d8d3</item>

     </style>

     <style name="d_tv_item_make">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_16</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:text">步骤图</item>
        <item name="android:paddingLeft">@dimen/dp_2</item>
        <item name="android:paddingRight">@dimen/dp_2</item>
         <item name="com.xiangha:radius">@dimen/dp_2</item>
         <item name="com.xiangha:backgroundColor">#E9E9E9</item>
     </style>
    
</resources>